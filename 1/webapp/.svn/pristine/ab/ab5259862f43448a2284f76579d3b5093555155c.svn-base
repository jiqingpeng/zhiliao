<!doctype html>
<html lang="zh-CN">
<head>
<meta charset="UTF-8">
<title>活动日程</title>
<link rel="shortcut icon" href="../../../img/webicon.ico" type="image/x-icon"/>
<link rel="stylesheet" href="../../../css/common/bootstrap.css" />
<link rel="stylesheet" href="../../../css/common/bootstrap-table.min.css">
<link rel="stylesheet" href="../../../css/common/bootstrap-datetimepicker.min.css">
<link rel="stylesheet" href="../../../css/common/bootstrapValidator.min.css"/>
<link href="../../../css/style.css" rel="stylesheet" />
<link href="../../../css/main.css" rel="stylesheet" />
<style type="text/css">
.tableAdd {
	min-height: 250px;
	border: 1px solid #ddd;
	border-radius: 4px;
	margin-bottom: 14px;
	width: 950px;
	padding-bottom: 14px;
}
.tabAddTitle {
	height: 40px;
	line-height: 40px;
	border-bottom: 1px solid #ddd;
	padding-left: 14px;
	font-weight: bold;
	background-color: #f1f1f1;
	margin-bottom: 14px;
}
.sTime, .eTime {
	background-color: #fff !important;
}
.none {
	display: none;
}
</style>

</head>
<body>
<script type="text/javascript" src="../../../js/common/header.js"></script>
<div class="mops-con">
	<div class="con-nav">
		<a href="basicInfo.html">管理中心</a>
		<a href="">-&gt;</a>
		<a href="basicInfo.html">活动管理</a>
		<a href="">-&gt;</a>
		<a href="schedule.heml">活动日程</a>
	</div>
	<div class="con-box">
		<!-- 活动id -->
		<input type="hidden" id="id"/>
		<div class="none tableAdd">
			<div class="tabAddTitle">添加/编辑活动日程</div>
			<form class="tabaddForm form-horizontal">
				<input type="hidden" id="activityId" name="activityId"/>
				
				<div class="form-group">
				    <label for="" class="col-sm-2 control-label"><span style="color: red">* </span>时间</label>
				    <div class="col-sm-3">
						<input type="hidden" name="stime" class="startTime"/>
				        <input type="text" name="S_time" class="form-control sTime" placeholder="请输入开始时间" readonly="readonly">
				    </div>
				    <div class="col-sm-1">&nbsp;&nbsp;至</div>
				    <div class="col-sm-3">
				    	<input type="hidden" name="etime" class="endTime"/>
				    	<input type="text" name="E_time" class="form-control eTime" placeholder="请输入结束时间" readonly="readonly">
				    </div>
				</div>
				<div class="form-group">
				    <label for="" class="col-sm-2 control-label"><span style="color: red">* </span>地点</label>
				    <div class="col-sm-7">
				      <input type="text" name="address" class="form-control address" placeholder="请填写日程地点">
				    </div>
				</div>
				<div class="form-group">
				    <label for="" class="col-sm-2 control-label"><span style="color: red">* </span>内容</label>
				    <div class="col-sm-7">
				      <input type="text" name="content" class="form-control content" placeholder="请填写日程内容">
				    </div>
				</div>
				<div class="btncon">
					<button type="button" class="btn btn-default btn-warning scheduleSave">保&nbsp;存</button>
					<button type="button" class="btn btn-default scheduleCancel">取&nbsp;消</button>
			    </div>
			</form>
		</div>
		<table id="texttable">
  		</table>
	</div>     
</div>
<script type="text/javascript" src="../../../js/common/footer.js"></script>
</body>
<script src="../../../js/jquery.min.js"></script>
<script src="../../../js/bootstrap.min.js"></script>
<script src="../../../js/bootstrap-table.min.js"></script>
<script src="../../../js/bootstrap-table-zh-CN.min.js"></script>
<script src="../../../js/bootstrap-datetimepicker.min.js"></script>
<script src="../../../js/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="../../../js/bootstrapValidator.min.js"></script>
<script src="../../../js/common/main.js"></script>

<script>
$(function(){
	// 获取左侧菜单列表数据(参数为请求地址)
	initMenu('../../../js/data/administrator.json','活动管理');

	$("#id").val(sessionStorage.getItem('actId'));

	// 日期插件初始化
	$(".sTime, .eTime").datetimepicker({
        language: 'zh-CN',//显示中文
        format: 'yyyy-mm-dd hh:ii:00',//显示格式
        minView: 0,//设置显示到秒
        initialDate: new Date(),//初始化当前日期
        autoclose: true,//选中自动关闭
        todayBtn: true//显示今日按钮
    });

	$('.tabaddForm').bootstrapValidator({
        message: 'This value is not valid',
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            S_time: {
                validators: {
                    notEmpty: {
                        message: '开始时间不能为空！'
                    }
                }
            },
            E_time: {
                validators: {
                    notEmpty: {
                        message: '结束时间不能为空！'
                    }
                }
            },
            address: {
                validators: {
                    notEmpty: {
                        message: '请填写日程地点！'
                    }
                }
            },
            content: {
                validators: {
                    notEmpty: {
                        message: '日程内容不能为空！'
                    }
                }
            }
        }
    });

	// 确认保存
    $('.scheduleSave').on('click',function(){
          var bootValidator = $(".tabaddForm").data('bootstrapValidator');
          bootValidator.validate();
          if(bootValidator.isValid()){
          	return;
            var address = basePath + "admin/activity/save.do"
            // console.log($("#detailform").serialize());
            $.ajax({
              url: address,
              data:$("#detailform").serialize(),
              type: 'POST',
              dataType: 'json',
              xhrFields: {
                withCredentials: true
              },
              crossDomain: true,
              success:function(result){
                console.log(result);
                if(result.flag){
                  myAlert("已保存");
                }else{
                  douAlert(result.msg);
                }
              },
              error:function(){
                console.log("请求失败");
              }
            });
          };
      });
});
</script>
<script>
	$(function () {
	    //1.初始化Table
	    var oTable = new TableInit();
	    oTable.Init();         
	});

	var TableInit = function () {
	    var oTableInit = new Object();
	    //初始化Table
	    oTableInit.Init = function () {
	        $('#texttable').bootstrapTable({
	        	url: '../../../js/data/schedule.json',
	            //method: 'get',                      //请求方式（*）
	            dataType: 'json',
	            dataLocale: 'zh-US',               //表格汉化
	            striped: true,                      //是否显示行间隔色
	            cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
	            pagination: true,                   //是否显示分页（*）
	            sortable: true,                     //是否启用排序
	            sortOrder: "desc",                   //排序方式
	            searchFormatter: false,
	            cellStyle: true,
	            checkbox : true,
	            sidePagination: "client",           //分页方式：client客户端分页，server服务端分页（*）
	            pageNumber:1,                       //初始化加载第一页，默认第一页
	            pageSize: 10,                       //每页的记录行数（*）
	            pageList: [10, 15, 20],        //可供选择的每页的行数（*）
	            
	            columns: [
	            {
	            	field: 'num',
	            	width: 50,
	            	align: 'center',
	                formatter: function(value,row,index){
                              return index+1;
                            }
	            }, {
	                field: 'id',
	                title: '时间',
	                align: 'center',
	                width: 200,
	                sortable: true ,//排序
	                formatter: function(value,row,index){
                              return "<input size='18' type='text' class='dataTime' placeholder='2015-06-08' readonly='readonly'>";
                            },
                     events: {                       
                            'mouseover .dataTime': function(e, value, row, index){
                            	 $(".dataTime").datetimepicker({
                                        language: 'zh-CN',//显示中文
                                        format: 'yyyy-mm-dd',//显示格式
                                        minView: "month",//设置只显示到月份
                                        initialDate: new Date(),//初始化当前日期
                                        autoclose: true,//选中自动关闭
                                        todayBtn: true//显示今日按钮
                                    });
                            }
                        }      
	            }, {
	                field: 'name',
	                title: '地点',
	                align: 'center',
	                width: 200
	            }, {
	                field: 'price',
	                title: '会议事物/会议内容',
	                align: 'center',	                // width: 600
	            },{
                    field: 'option',
                    title: '操作',
                    width: 86,
                    align: 'center',
                    formatter: function(value,row,index){
                      return '<span class="glyphicon glyphicon-pencil tabEdit" aria-hidden="true"></span>&nbsp'+'<span class="glyphicon glyphicon-trash tabDel" aria-hidden="true"></span>';
                    },
                    events: {
                            'click .tabEdit': function (e, value, row, index) {
                                console.log(row.name);
                            },
                            'click .tabDel': function (e, value, row, index) {
                                console.log(row.name);
                            }
                        }
                }]
	        });
	    };

	    //得到查询的参数
	    oTableInit.queryParams = function (params) {
	        var temp = {   //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
	            limit: params.limit,   //页面大小
	            offset: params.offset,  //页码
	            departmentname: $("#txt_search_departmentname").val(),
	            statu: $("#txt_search_statu").val()
	        };
	        return temp;
	    };
	    return oTableInit;
	};
</script>
</html>
