    etime = (Date.parse(etime))/1000;
    var i = etime - timestamp;
    function show(){
        var s = i;
        var d = parseInt(s/86400);
        s %= 86400;
        var h = parseInt(s/3600);
        s %= 3600;
        var m = parseInt(s/60);
        s %= 60;
        s = parseInt(s);
        var t = Dou(h)+'天'+Dou(h)+':'+Dou(m)+':'+Dou(s);
