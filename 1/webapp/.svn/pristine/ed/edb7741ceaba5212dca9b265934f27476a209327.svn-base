function isWeixin() { 
    var ua = window.navigator.userAgent.toLowerCase(); 
    if (ua.match(/MicroMessenger/i) == 'micromessenger') { 
        return true; 
    } else { 
        return false;
    } 
};
function isCheck(){
    var document = $(".pay-itembox");
    if (document.hasClass('check')) { 
        return true; 
    } else { 
