@charset "utf-8";

.none {
	display: none;
}
#viewcon {
	border: 1px solid #ddd;
	border-top: 2px solid #c90101;
	border-radius: 4px 4px 0 0;
	width: 76%;
	min-height: 350px;
	min-width: 880px;
	margin-bottom: 24px;
	line-height: 30px;
	color: #444;
	padding: 8px 10px;
}
.editorcon {
	margin: 24px 0 0 44px;
	z-index: 1;
}
.zh, .en {
	display: inline-block;
	height: 24px;
	width: 70px;
	margin-right: 5px;
	border: 1px solid #fadc96;
	background-color: #fff5e1; 
	font-size: 12px;
	color: #333;
	line-height: 24px;
	text-align: center;
	border-radius: 2px 2px 0 0;
	cursor: pointer;
}
.introactive {
	border: 1px solid #c90101;
	background-color: #c90101;
	color: #fff;
}

#editor { 
	border-top: 2px solid #c90101;
	border-radius: 4px 4px 0 0;
	width: 76%;
	min-height: 350px;
	min-width: 880px;
	margin-bottom: 24px;
}

.filename {
	height: 27px;
	width: 220px;
	border-radius: 2px;
	padding-left: 4px;
	display: inline-block !important;
	border: 1px solid #aaa;
}

.upfile {
	display: inline-block !important;
	margin-left: 10px;
}

.saveinfo, .editinfo {
	margin: 24px 0 0 30%;
}