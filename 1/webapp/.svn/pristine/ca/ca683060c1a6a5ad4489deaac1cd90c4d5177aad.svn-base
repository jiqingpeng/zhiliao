@charset "utf-8";

/* reset */
body,h1,h2,h3,h4,h5,p,dd,ul,ol,form,input,textarea,th,td,select,button { margin:0; padding:0; }
em { font-style:normal; }
li { list-style:none; }
a { text-decoration:none; }
img { border:none; vertical-align:top; }
table { border-collapse:collapse; }
input,textarea { outline:none; }
textarea { resize:none; overflow:auto; }
body { font-size:14px; font-family: "SimSun","宋体","Arial Narrow",HELVETICA; }
/* end reset */

/* 公共样式 */
a, a:visited{   
  text-decoration: none;
  color: #122e67;
}
a:hover, a:focus {
    color: #ff8400;
    text-decoration: none;
}
.clearfix:after{display:block;
                content:'';
                clear:both;
}
.clearfix{ zoom:1;}
.fl{ float:left;
    }
.fr{ float:right;
    }
.inlblk {
	display: inline-block;
}
.mops-con {
	width: 100%;
	height: 100%;
}
.con-nav {
    font-size:18px;
	color:#333;
	height: 45px;
	line-height: 45px;
	border-bottom:1px #c9924b solid;
	padding-left: 14px;
}
.con-nav a, .con-nav a:visited {
	color: #333;
	font-size: 14px;
}
.con-nav a:hover, .con-nav a:focus {
	color: #2095F2;
}
.con-box {
	/*margin: 24px 3%;*/
    position: relative;
    font-size: 14px;
    color: #333;
}
.noSubMenu {
    margin: 24px 3%;
}
/*.mops-form {
	min-width: 940px;
}*/
.btncon {
    margin-top: 26px;
    text-align: center;
}
.btncon .btn {
    margin-right: 14px;
}
.none {
    display: none;
}
/*鼠标小手显示*/
.cursor{
      cursor: pointer; 
    }
/* table表格内操作图标颜色 */
.tabEdit {
    color: green;
}
.tabDel {
    color: red;
}

/*弹出框复选样式con-box必须有定位*/
.con-box{
    position:relative;
    padding-bottom: 24px;
}
.alert_box{
    position: fixed;
    left:50%;
    top:50%;
    margin-left:-150px;
    margin-top:-150px;
    width:300px;
    min-height:160px;
    display: none;
    background:#fff;
    border-radius:6px;
    border:1px solid #ddd;
    z-index: 3009;
}
.alert_box .abox_head{
    background:#f4b33c;
    height:40px;
    line-height: 40px;
    text-align:center;
    color:#fff;
    text-align: center;
    font-size:20px;
}
.alert_box .abox_mess{
    text-align:center;
    margin:0 auto;
    margin-top:40px;
    color:#000;
    font-size:16px;
}
.alert_box .abox_foot{
    width:140px;
    height: 64px;
    margin:0 auto;
    overflow: hidden;
    margin-top:20px;
}

.alert_box .abox_foot button{
    width:58px;
    height: 26px;
    background:#f4b33c;
    outline: none;
    border:none;
    color:#fff;
    margin-top: 15px;
    border-radius:2px;
}
.alert_box .abox_foot .yes{
    float:left;
}
.alert_box .abox_foot .no{
    background:#e6e6e6;
    color:#000;
    margin-left:11px;
    float:right;
}
/* end 公共样式 */