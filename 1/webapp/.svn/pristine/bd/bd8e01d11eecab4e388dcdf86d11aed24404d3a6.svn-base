<!doctype html>
<html lang="zh-CN">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>已发布公告</title>
<link rel="shortcut icon" href="../../../img/webicon.ico" type="image/x-icon"/>
<link href="../../../css/common/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="../../../css/common/bootstrap-table.min.css">
<link href="../../../css/style.css" rel="stylesheet" />
<link href="../../../css/main.css" rel="stylesheet" />
<link rel="stylesheet" href="../../../css/admin.css">
<style type="text/css">
    #texttable tr{
        cursor: pointer;
    }
    .th-inner {
        cursor: default;
    }
</style>
</head>
<body>
<script type="text/javascript" src="../../../js/common/header.js"></script>
<div class="mops-con">
	<div class="con-nav">
		<a href="news.html">新闻公告</a>
		<a href="">-&gt;</a>
		<a href="oldNotice.html">已发布公告</a>
	</div>
	<div class="con-box">
	<div id="subMenu">
        <div id="subMenuBody">
            <ul>
                <a href="news.html"><li>新闻发布</li></a>
                <a href="notice.html"><li>公告发布</li></a>
                <a href="oleNews.html"><li>已发布新闻</li></a>
                <a href="oldNotice.html"><li class="menuAct">已发布公告</li></a>
            </ul>
        </div>
    </div>
    <div id="contentBody" class="mops-table">
        <form class="form-horizontal notice none">
            <input type="hidden" name="activityId" id="activityId">
            <input type="hidden" name="id" id="id">
            <div class="form-group">
                <label class="col-sm-1 control-label">标题</label>
                <div class="col-sm-7">
                    <input type="text" name="title" class="form-control title" placeholder="请输入标题">
                </div>  
            </div>
            <div class="form-group"> 
                <label class="col-sm-1 control-label">作者</label>
                <div class="col-sm-7">
                    <input type="text" name="author" class="form-control author" placeholder="请输入作者">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label">正文</label>
                <div class="col-sm-7">
                    <textarea id="noticeeditor"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-1 control-label"></label>
                <div class="col-sm-7">
                    <div class="btncon">
                        <button type="button" class="btn btn-default btn-warning saveinfo">发&nbsp;布</button><button type="button" class="btn btn-default cancelinfo">取&nbsp;消</button>
                    </div>
                </div>
            </div>
        </form>
        <a href="#" style="display: none" id="simulate">新闻详情</a>
		<table id="texttable">
        </table>
	</div>
    </div>
</div>

<script type="text/javascript" src="../../../js/common/footer.js"></script>
</body>
<script src="../../../js/jquery.min.js"></script>
<script src="../../../js/bootstrap.min.js"></script>
<script src="../../../js/ueditor/ueditor.config.js"></script>
<script src="../../../js/ueditor/ueditor.all.js"></script>
<script src="../../../js/ueditor/lang/zh-cn/zh-cn.js"></script>
<script src="../../../js/bootstrap-table.min.js"></script>
<script src="../../../js/bootstrap-table-zh-CN.min.js"></script>
<script src="../../../js/common/common.js"></script>
<script src="../../../js/common/main.js"></script>
<script>

$(function(){
    // 获取左侧菜单列表数据(参数为请求地址)
    serialMenuAjax('admin/activity/menu.do', '新闻公告', sessionStorage.getItem('actId'), initPage);

	// initPage();

    //取消
    $(".cancelinfo").on("click", function(){
        $(".title").val("")
        $(".author").val(""); 
        $("#id").val("");
        $("#activityId").val("");
        editor.setContent("");
        $(".notice").hide(1000);
    });

    //保存
    $(".saveinfo").click(function(){
        var id = $("#id").val();
        var activityId = sessionStorage.getItem('actId');
        var uedContent = editor.getContent();
        var title = $(".title").val();
        var author = $(".author").val();
        var data =  'id=' + id +
                    '&activityId='+ activityId +
                    '&title=' + title +
                    '&author=' + author +
                    '&content=' + uedContent;
            if(uedContent){
                $.myAjax({
                    url: basePath + "admin/activitynotice/save.do",
                    data: data,
                    success: function(result){
                        myAlert(result.msg);
                        $(".notice").hide(1000);
                        setTimeout(function(){
                            location.reload();  
                        },1200);
                    },
                    error: function(){
                        myAlert(result.msg,"slow");
                    }
                })
            }else{
                myAlert("公告内容不能为空");
            }   
    });
});

// 实例化编辑器
var editor = UE.getEditor('noticeeditor',{
    toolbars:[[
            'undo', //撤销
            'redo', //重做
            'preview', //预览
            'selectall', //全选
            'removeformat', //清除格式
            'cleardoc', //清空文档
            'bold', //加粗
            'indent', //首行缩进
            'italic', //斜体
            'underline', //下划线
            'strikethrough', //删除线
            'subscript', //下标
            'fontborder', //字符边框
            'superscript', //上标
            'formatmatch', //格式刷
            'justifyleft', //居左对齐
            'justifyright', //居右对齐
            'justifycenter', //居中对齐
            'justifyjustify', //两端对齐
            'forecolor', //字体颜色
            'backcolor', //背景色
            'insertorderedlist', //有序列表
            'insertunorderedlist', //无序列表
            'imagenone', //默认
            'imageleft', //左浮动
            'imageright', //右浮动
            'imagecenter', //居中
            'rowspacingtop', //段前距
            'rowspacingbottom', //段后距
            'lineheight', //行间距
            'edittip ', //编辑提示
            'touppercase', //字母大写
            'tolowercase', //字母小写
            'autotypeset', //自动排版
        ],[
            'spechars', //特殊字符
            'fontfamily', //字体
            'fontsize', //字号
            'paragraph', //段落格式
            'customstyle', //自定义标题
            'inserttable', //插入表格
            'insertrow', //前插入行
            'insertcol', //前插入列
            'mergeright', //右合并单元格
            'mergedown', //下合并单元格
            'deleterow', //删除行
            'deletecol', //删除列
            'splittorows', //拆分成行
            'splittocols', //拆分成列
            'splittocells', //完全拆分单元格
            'deletecaption', //删除表格标题
            'inserttitle', //插入标题
            'mergecells', //合并多个单元格
            'deletetable', //删除表格
            'insertparagraphbeforetable', //"表格前插入行"
            'edittable', //表格属性
            'edittd', //单元格属性
            'date', //日期
            'time', //时间
            'link', //超链接
            'unlink', //取消链接
        ]
    ],
    autoHeightEnabled: true,
    autoFloatEnabled: true
})

//初始化页面
function initPage(){
    var activityId = sessionStorage.getItem('actId');
    $.myAjax({
        url: basePath + "admin/activitynotice/list.do",
        data: {id:activityId},
        success: function(result){
            if(result.flag){
                
            }else{
            	initTable(result);
            }
            initTable(result);
        },
        error: function(){
        	myAlert("请求失败!", "slow");
        }
    })
}

//初始化table表格
function initTable(data){
    $('#texttable').bootstrapTable({
        //data: str,
        dataType: 'json',                   //数据格式
        dataLocale: 'zh-US',               //表格汉化
        // toolbar: '#toolbar',
        striped: true,                      //是否显示行间隔色
        cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
        pagination: true,                   //是否显示分页（*）
        sortable: true,                     //是否启用排序
        sortOrder: "desc",                  //排序方式
        // search: true,                  
        // searchFormatter: false,
        // showRefresh: true,                  //是否显示刷新按钮
        cellStyle: true,
        checkbox : true,
        //height: 560,
        sidePagination: "client",           //分页方式：client客户端分页，server服务端分页（*）
        pageNumber:1,                       //初始化加载第一页，默认第一页
        pageSize: 10,                       //每页的记录行数（*）
        pageList: [10, 15, 20],        //可供选择的每页的行数（*）
        columns: [
        {
            field: 'id',
            align: 'center'
        },{
            field: 'num',
            width: 40,
            align: 'center',
            formatter: function(value,row,index){
                      return index+1;
            }
        }, {
            field: 'title',
            title: '公告标题',
            align: 'center',
            sortable: true  //排序
        },{
            field: 'author',
            title: '作者',
            align: 'center',
            sortable: true ,
        },{
            field: 'ctime',
            title: '发布时间',
            align: 'center'
        },{
            field: 'option',
            title: '操作',
            width: 86,
            align: 'center',
            formatter: function(value,row,index){
              return '<span class="glyphicon glyphicon-pencil tabEdit cursor" aria-hidden="true" ></span>&nbsp'+'<span class="glyphicon glyphicon-trash tabDel cursor" aria-hidden="true"></span>';
            },
            events: {
                'click .tabEdit': function (e, value, row, index) {
                                //修改表单内容
                                $(".modification").show(1000);  
                                showTableForm(row);       
                            },
                'click .tabDel': function (e, value, row, index) {
                        myConfirm("确定删除", function(){
                            var clickThis = this;
                            //删除本条数据
                            url=basePath + "admin/activitynotice/del.do";
                            $.myAjax({
                                url: url,
                                data:{id:row.id},
                                success:function(result){
                                    var data=result.data;
                                    if(result.flag){
                                        $(clickThis).parent().parent().remove();
                                        setTimeout(function(){
                                            location.reload();  
                                        },20)
                                    }else{
                                        myConfirm(result.msg);
                                    }
                                },
                                error:function(){
                                    myAlert("请求失败!", "slow");
                                }
                            });
                        });
                    }
                }
        }],
        onClickRow:function(row,field,$element){
            if($element!="option"){
                var href = '../../index/newsDetail.html?newsId=' + row.id + '&type=2';
                $("#simulate").attr({"href":href, "target": "_blank"});
                document.getElementById("simulate").click();
            }  
        }
    });
    $('#texttable').bootstrapTable('hideColumn', 'id');
    
    if(data){
        $('#texttable').bootstrapTable("load",data);
    }    
}

//修改
function showTableForm(data){
    $("#id").val(data.id);
    $("#activityId").val(sessionStorage.getItem('actId'));
    $(".notice").show(1000);
    $("#id").val(data.id);
    $("#activityId").val(sessionStorage.getItem('actId'));
    $(".title").val(data.title)
    $(".title").attr("disabled", "true");
    $(".author").attr("disabled", "true")
    $(".author").val(data.author);
    $.myAjax({
        url: basePath + "admin/activitynotice/get.do",
        data: {id: $("#id").val()},
        success: function(result){
            editor.ready( function() { // 富文本实例化完成
                editor.setContent(result.data.content);
            });
        },
        error: function(){
            myAlert("请求失败!", "slow");
        }
    })   
}
</script>
</html>
