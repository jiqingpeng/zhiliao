<script>
	$(function(){
		init();
		$(document).on('click','.item',function(){
			$('.mess-talk').css('display','block');
		});
	})
	function init(){
		var url=basePath+'user/activity/issue/list.do';
		var id='25812d45fc27441ebacb6f9e3fe70322';
		// var url=basePath+'user/activity/issue/comment/list.do';
		// var id='cff1f4ad2e6a416bab10ab11b74b186q';
		var pageNum=1;
		var pageSize=10;
		$.myAjax({
			url: url,
			// data:{id:id,pageNum:pageNum,pageSize:pageSize},
			data:{id:id},
			success: function(result) {
				console.log(result);
				if (result.flag) {
					for(var i = 0; i < result.data.activityIssue.length; i ++){
						var str=
						'<div class="message-box">'+
							'<input type="hidden"/>'+
							'<div class="mess-group">'+
								'<div class="mess-cont tit-cont">'+
									result.data.activityIssue[i].name+
								'</div>'+
								'<div class="mess-foot clearfix">'+
									'<a class="col-xs-2 fr item" href="javascript:;">'+
										'<img src="../../img/weixin/up.png" alt="up">'+
										'<span class="num reply">'+result.data.activityIssue[i].thumbsUp+'</span>'+
									'</a>'+
									'<a class="col-xs-2 fr item" href="javascript:;">'+
										'<img src="../../img/weixin/talk.png" alt="talk">'+
										'<span class="num reply">'+result.data.activityIssue[i].totalComment+'</span>'+
									'</a>'+	
								'</div>'+
							'</div>'+
						'</div>';
						$('.order-box').append(str);
					}
				} else {
					myAlert(result.msg);
				};
			},
			error: function() {
				myAlert('请求失败');
			}
		});
	}
