/* 活动管理基本信息页面 */

.stime, .etime {
	background-color: #fff;
}

.plus{
	height: 43px;
}
.append{
	width: 36px;
	height: 30px;
	line-height: 34px;
	text-align: center;
	background-color: #ccc;
	position: absolute;
	border-radius: 3px;
	top: 2px;
	right: 18px;
}
.industry{
	position: relative;
}
.category{
	min-width: 180px;
	min-height: 300px;
	border: 1px solid #ccc;
	position: absolute;
	top: -300%;
	left: 75%;
	display: none;
	background-color: #f4960d;
}
.category a{
	// color: #000;
	cursor: pointer;
	margin: 2px 0;
	display: block;
	text-align: center;
}
.category a:hover{
	color: #fff;
}
 /* 个人信息页面css样式 */
.caption{
	width: 40px;
	height: 40px;
	line-height: 40px;
	background-color: red;
}
.comStyle{
	width: 200px;
	height: 30px;
	line-height: 30px;
	text-align: center;
	color: #fff;
	border-radius: 20px;
	margin: 10px 0;
}
.caption .comStyle a{
	font-size: 14px;
}
.caption .perDetails{
	float: left;
	margin-left: 300px;
}
.caption .perDetails a{
	color: #fff;
	cursor:pointer;
}
.caption .secSettings{
	float: right;
	margin-right: 300px;
}
.caption .secSettings a{
	color: #000;
	cursor:pointer;
}
.hasBgc{
	background: url(../img/menulistbg.png) repeat-x;
}
.loseBgc{
	background: "";
}

/* 新闻公告部分样式 */
#newseditor { 
	border-top: 2px solid #c90101;
	border-radius: 4px 4px 0 0;
	width: 76%;
	min-height: 350px;
	min-width: 880px;
	margin-bottom: 24px;
}
/* 新闻公告部分样式-end */


/* 活动流程部分样式开始 */
.timeInstall{
	width: 200px;
	height: 32px;
	text-align: center;
	border-radius: 5px;
	border: 1px solid #ddd;
}
/* 活动流程部分样式结束 */