<script type="text/javascript">
	$(function(){
		// 获取左侧菜单列表数据(参数为请求地址)
		// initMenu('../../../js/data/administrator.json','会议指南');
		serialMenuAjax('admin/activity/menu.do', '会议指南', sessionStorage.getItem('actId'), initTable);
		// initTable(data);
		$("#sel_exportoption").change(function () {
	    $('#texttable').bootstrapTable('refreshOptions', {
	        	exportDataType: $(this).val()
	    	});
		});
	})

	var data=[
		{
			"activityGuide": "会议须知"
		},
		{
			"activityGuide": "会议日程表"
		},
		{
			"activityGuide": "参会人员名单"
		},
		{
			"activityGuide": "会场安排"
		},
		{
			"activityGuide": "住宿安排"
		},
		{
			"activityGuide": "服务指南"
		}
	]

	function initTable(data){
		$('#texttable').bootstrapTable({
	            data: data,
	            dataLocale: 'zh-CN',               //表格汉化
	            toolbar: '#toolbar',                //工具按钮用哪个容器
	            striped: true,                      //是否显示行间隔色
	            cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
	            pagination: true,                   //是否显示分页（*）
	            sortable: false,                     //是否启用排序
	            sortOrder: "asc",                   //排序方式
	            // queryParams: oTableInit.queryParams,//传递参数（*）
	            sidePagination: "client",           //分页方式：client客户端分页，server服务端分页（*）
	            pageNumber:1,                       //初始化加载第一页，默认第一页
	            pageSize: 10,                       //每页的记录行数（*）
	            strictSearch: false,
	            clickToSelect: true,                //是否启用点击选中行
	            clickToSelect:true,
	            showExport: true,                     //是否显示导出
	            exportDataType: "basic",              //basic', 'all', 'selected'.
	            columns: [{
                checkbox: true,
                valign: 'middle'
            	},
	            {
	                field: 'id',
	                title: '会议邮箱id',
	            },
	            {
	                field: 'activityGuide',
	                title: '会议指南功能',
	                align: 'center'
	            },

	            ],        
	    });
	    $('#texttable').bootstrapTable('hideColumn', 'id');
	};	
</script> 

