<script type="text/javascript">
	$(function(){
		type = null;
 		init();
		$('.page-list').on('click',function(){
			type = this.dataset.type;
			console.log(type);
			var txt = $(this).find('.page-l span').html();
			var item = $(this).find('.page-r span').html();
			myConfirm(txt,item);

		});
		function myConfirm(txt,item,type, YES, NO) {
			$("body").prepend('<div id="masking"></div><div class="alert_box"><div class="abox_tit">aaa</div><input class="abox_mess"/><div class="abox_foot"><button class="yes">确&nbsp定</button><button class="no">取&nbsp消</button></div></div>');
			$("#masking").css({
				"position": "fixed",
				"width": "100%",
				"height": "100%",
				"background": "#000",
				"z-index": "3001",
				"filter": "alpha(Opacity=40)",
				"-moz-opacity": "0.4",
				"opacity": "0.4"
			});
			$(".alert_box").css({
				"position": "fixed",
				'left': '12%',
				'top': '42%',
				"border": "1px solid #ddd",
				"border-radius": "4px 4px",
				"width": "66%",
				"padding":"0 5%",
				"min-height": "80px",
				"background": "#fff",
				"z-index": "3002",
			});
			$(".abox_tit").css({
				"width":"100%",
				"height": "40px",
				"line-height": "40px",
			});
			$(".abox_mess").css({
				"width":"100%",
				"height": "30px",
				"border":"none",
				"border-bottom":"1px solid #f60",
				"outline":"none"
			});
			$(".abox_foot").css({
				"border-top": "1px solid #ddd",
				"height": "56",
				"width": "100%",
				"line-height": "56px",
				"text-align": "right"
			});
			$(".abox_foot button").css({
				"width": "15%",
				"margin-right": "10px",
				"color": "#fc742a",
				"border": "none",
				"background": "none"
			});
			$('.alert_box').css('display', 'block')
			$('.alert_box .abox_tit').html('修改'+txt);
			$('.alert_box .abox_mess').val(item);
			$('.alert_box .abox_mess').focus();
			$('.yes').on('click', function() {
				console.log(type)
				save(type);
			})
			// 点击确定
			if (!!YES) {
				$('.yes').on('click', function() {
					YES();
					
					$("#masking").remove();
					$(this).parent().parent().remove();

				});
			} else {
				$('.yes').on('click', function() {
					
					$("#masking").remove();
					$(this).parent().parent().remove();
					return true;
				});
			}
			// 点击取消
			if (!!NO) {
				$('.no').on('click', function() {
					NO();
					$("#masking").remove();
					$(this).parent().parent().remove();
				});
			} else {
				$('.no').on('click', function() {
					$("#masking").remove();
					$(this).parent().parent().remove();
					return false;
				});
			}
		};
		function reset(){
			var url = basePath + ""
		};
		function init(){
			var url = basePath + "user/user/info.do";
			$.myAjax({
				url:url,
				success:function(result){
					console.log(result)
					if(result.flag){
						var data = result.data.user
						$('.name').html(data.name);
						$('.nick').html(data.nick);
						$('.unit').html(data.unit);
						$('.phone').html(data.phone);
						$('.email').html(data.email);
						$('.duty').html(data.duty);
						$('.address').html(data.address);
						$('.gender').html(data.gender);
						$('.postcode').html(data.postcode);
					}else{
						myAlert('请求失败')
					}
				},
				error:function(result){
					myConfirm('请求失败')
				}
			})
		};
		function save(type){
			var url = basePath + "user/user/save.do";
			var content = $('.abox_mess').val();
			$.myAjax({
				url:url,
				data:{type:content},
				success:function(result){
					console.log(result)
					if(result.flag){
						
					}else{
						myAlert('请求失败')
					}
				},
				error:function(result){
					myConfirm('请求失败')
				}
			})
		};
});
