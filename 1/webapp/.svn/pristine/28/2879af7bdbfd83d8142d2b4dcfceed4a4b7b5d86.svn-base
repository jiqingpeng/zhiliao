<script src="../../js/jQuery.md5.js"></script>
<script>
	//获取验证码
	function getCode(){
		var url=basePath+"verification/get.do";
		$.ajax({
			url: url,
			type: 'GET',
			dataType: 'json',
			xhrFields: {
       			withCredentials: true
    		},
    		crossDomain: true,
			success:function(result){
				if(result.flag){
					$('.regImg').attr('src','data:image/png;base64,'+result.data);
				}else{
					alert(result.msg);
				};
			}
		});
	};
	getCode();
	//主办方登陆
	function Login(id,url,path){
		if(userValidation(id)){
			var url=basePath+url;
			var mobile=$(id+'.user').val();
			var pwd=$.md5($(id+'.password').val());
			var code=$(id+'.regBox').val();
			$.ajax({
				url: url,
				data: {
					mobile:mobile ,
					pwd: pwd,
					code:code
					// phone: '13633334444',
					// pwd:'asd' 
				},
				type: 'POST',
				dataType: 'json',
				xhrFields: {
	       			withCredentials: true
	    		},
	    		crossDomain: true,
				success:function(result){
					if(result.flag){
						window.location.href = path;
						// window.location.href = basePath+result.url;
					}else{
						$(id+'.login_message').css('display','block');
						$(id+'.login_message').html(result.msg);
						codeChange();
					};
				}
			});
		}
		
	};
	//参会方登陆
	function adminLogin(id,url,path){
		if(adminValidation(id)){
			var url=basePath+url;
			var mobile=$(id+'.user').val();
			var pwd=$.md5($(id+'.password').val());
			var code=$(id+'.regBox').val();
			$.ajax({
				url: url,
				data: {
					mobile:mobile ,
					pwd: pwd,
					code:code
					// phone: '13633334444',
					// pwd:'asd' 
				},
				type: 'POST',
				dataType: 'json',
				xhrFields: {
	       			withCredentials: true
	    		},
	    		crossDomain: true,
				success:function(result){
					if(result.flag){
						window.location.href = path;
						// window.location.href = basePath+result.url;
					}else{
						$(id+'.login_message').css('display','block');
						$(id+'.login_message').html(result.msg);
						codeChange();
					};
				}
			});
		};
	};
	//主办方登陆验证
	function adminValidation(id){
		var mobile=$(id+'.user').val();
		var pwd=($(id+'.password').val());
		var code=$(id+'.regBox').val();
		// 验证手机号
		if (mobile == null || mobile == '') {
			alert('账号不能为空!');
			return false;
		}else{
			if(!(/^1[34578]\d{9}$/.test(mobile))){ 
	        	alert("账号格式不正确！");  
	        	return false; 
	        };
		};
		// 验证密码
		if (pwd == null || pwd == '') {
			alert('密码不能为空!');
			return false;
		};
		// 验证图形验证码
		if (code == null || code == '') {
			alert('验证码不能为空!');
			return false;
		};
		return true;
	};
	//参会方登陆验证
	function userValidation(id){
		var mobile=$(id+'.user').val();
		var pwd=($(id+'.password').val());
		// 验证手机号
		if (mobile == null || mobile == '') {
			alert('账号不能为空!');
			return false;
		}else{
			if(!(/^1[34578]\d{9}$/.test(mobile))){ 
	        	alert("账号格式不正确！");  
	        	return false; 
	        };
		};
		// 验证密码
		if (pwd == null || pwd == '') {
			alert('密码不能为空!');
			return false;
		};
		return true;
	};
	//更换验证码
	$('.regText').click(codeChange);
	function codeChange(){
		$('.regBox').val(' ');
		getCode();
	}
	//参会用户登陆
	$('#userLogin').click(function(){
		Login('#user ','user/login/check.do','../user/activityList.html');	
	});
	//主办方登陆
	$('#adminLogin').click(function(){
		adminLogin('#admin ','admin/login/check.do','../admin/activityList.html');	
	});
	//验证码显示
	function imgShow(id){
		$(id+'.password').focus(function(){
			var user=$(id+'.user').val();
			if(user!=''){
				$(id+'.regCode').css('display','block');
			};
		});
	};
	imgShow('#user ');
	imgShow('#admin ');
	//切换角色
	$('.logList li').click(function(){
		$('.loginList li').removeClass('active');
		$('.loginList li').eq($(this).index()).addClass('active');
		$('.logList li').css('background','#f49120')
		$(this).css('background','#ff6600');
	});
	//键盘登陆
	$(document).keypress(function(e) {  
		// 回车键事件  
        if(e.which == 13) {
        	Login('#user ','user/login/check.do','../user/activityList.html');
        	Login('#admin ','admin/login/check.do','../admin/activityList.html'); 
        };	  
	});
</script>
