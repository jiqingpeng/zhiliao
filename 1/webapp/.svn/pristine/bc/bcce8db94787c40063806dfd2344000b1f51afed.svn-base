<script src="../../js/common/jquery.form.js"></script>
<script src="../../js/common/common.js"></script>
<script src="../../js/common/main.js"></script>
<script type="text/javascript">
$(function(){
	// 获取左侧菜单列表数据(参数为请求地址)
	initMenu('../../js/data/superMenu.json','基本信息');
	
	initPage();

	$("#uploadImg").uploadPreview({ Img: "perImg", ImgType: ["jpeg", "jpg", "png"]});
	$(".infoSave").click(function(){
		var bootValidator = $("#informationFm").data('bootstrapValidator');
        bootValidator.validate();
        if(bootValidator.isValid()){
        	var actionUrl = basePath + "admin/admin/save.do"
			$("#informationFm").attr("action", actionUrl);
        	$("#informationFm").submit();
        }
	});

	// 上传文件回显提示
	var options = {
		success: function (result) {
			var data = $.parseJSON(result);
			if(data.flag){
				myAlert(data.msg);
				$('#informationFm').data('bootstrapValidator').resetForm(true);
			} else {
				myAlert(data.msg,'slow');
			}
		},
		error: function(){
			myAlert("请求失败",'slow');
		}
	};
	$("#informationFm").ajaxForm(options);


	$(".infoCancel").click(function(){
		$('#informationFm').data('bootstrapValidator').resetForm(true);
		initPage();
	});

	//表单验证
	$('#informationFm').bootstrapValidator({
        message: '信息输入有误！',
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            nick: {
                validators: {
                    notEmpty: {
                        message: '姓名不能为空'
                    }
                }
            },
            name: {
                validators: {
                    notEmpty: {
                        message: '单位名称不能为空'
                    }
                }
            },
            corporationType: {
                validators: {
                    notEmpty: {
                        message: '请选择单位性质'
                    }
                }
            },
            email: {
                validators: {
                    emailAddress: {
                        message: '请输入正确的邮箱地址！'
                    }
                }
            }
        }
    });

});

function initPage(){
	$.myAjax({
			url: basePath + "super/super/get.do",
			success: function(result){
				console.log(result);
				if(result.flag){
					$(".contactUser").html(result.data.contactUser);
					$(".name").html(result.data.name);
					$(".address").html(result.data.address);
					$(".contactMobile").html(result.data.contactMobile);
					$(".contactEmail").html(result.data.contactEmail);
					$(".contactDuty").html(result.data.contactDuty);
					// $(".fax").val(result.data.fax);
					// if(result.data.portrait){
					// 	var imgUrl = basePath + result.data.portrait;
					// 	// imgUrl = imgUrl.replace(/[\\]/g,"\/");
					// 	$("#perImg").attr("src",imgUrl);
					// }
				}else{
					myAlert(result.msg);
				}
			},
			error: function(){
				myAlert("请求失败",'slow');
			}
		})
}
</script>
