<script type="text/javascript">
var hasImg = false;
$(function(){
    // 获取ID值
    if(Request("id") && Request("id").length == 32){ // 链接地址中id有值，且值正确
        sessionStorage.setItem('actId',Request("id"));
    };
    $("#activityId").val(sessionStorage.getItem('actId'));
    // 获取左侧菜单列表数据(参数为请求地址)
    // initMenu('../../../js/data/administrator.json','嘉宾管理');
    serialMenuAjax('admin/activity/menu.do', '嘉宾管理', sessionStorage.getItem('actId'), initPage);

    /**** 上传头像 ****/
    var Uploader = Q.Uploader,
        formatSize = Q.formatSize,
        boxView = document.getElementById("upView");

    var uploader = new Uploader({
        url: basePath + 'admin/activity/expert/save.do',
        dataType: "json",
        target: document.getElementById("upBtn"),
        view: boxView,
        auto: false,
        allows: ".jpg,.png,.jpeg",
        workerThread: 1,
        scale: {
            //要缩放的图片格式
            types: ".jpg",
            //最大图片宽度（maxWidth）或高度（maxHeight）
            maxWidth: 100
        },
        on: {
            //添加之前触发
            add: function (task) {
                if (task.disabled) return myConfirm("允许上传的文件格式为：" + this.ops.allows,'slow');
                if (task.size == -1){
                    return false;
                } else {
                    hasImg = true;
                }
                if(task.size > 2*1024*1024){
                    myConfirm("允许上传图片大小为‘2M’");
                    return false;
                }
            },
            complete: function(task){
                console.log(task);
                myAlert(task.json.msg);
                $('#tabaddForm').data('bootstrapValidator').resetForm(true);
                $(".modification").hide(1000);
                setTimeout(function(){
                    location.reload();  
                },1200);
            }
        }
    });
    /**** 上传头像-END ****/

    $("#btn_add").on("click", function(){
        showTableForm();
    });     
    // $("#submenumark").css('display','none');
    // initPage();
    //确认保存
    $('.functionarySave').on('click',function(){
        $("#activityId").val(sessionStorage.getItem('actId'));  
        var bootValidator = $(".tabaddForm").data('bootstrapValidator');
        bootValidator.validate();
        if(bootValidator.isValid()){
            if(hasImg){
                uploader.data = $("#tabaddForm").serializeObject();
                //将auto配置为false以手动上传
                uploader.start();
            } else {
                $.myAjax({
                    url: basePath + "admin/activity/expert/save.do",
                    data:$("#tabaddForm").serialize(),
                    success:function(result){
                        if(result.flag){
                            myAlert(result.msg);
                            $('#tabaddForm').data('bootstrapValidator').resetForm(true);
                            $(".modification").hide(1000);
                            setTimeout(function(){
                                location.reload();  
                            },1200);
                        }else{
                            myConfirm(result.msg);
                        }
                    },
                    error:function(){
                        myAlert("请求失败!", "slow");
                    }
                });
            }
            
        }           
    });

    // 管理员信息取消
    $(".functionaryCancel").click(function(){
        $("#tabaddForm input").val('');
        $(".modification").hide(1000);
        $('#tabaddForm').data('bootstrapValidator').resetForm(true);
        //initPage();
    });

    // 跳转详情页
    $(".guestDetail").click(function(){
        var elems = $("#texttable").bootstrapTable('getSelections');
        if(elems.length <= 0){
            myAlert("请勾选要查看的嘉宾",'slow');
            return false;
        } else if(elems.length > 1){
            myAlert("只能勾选单个嘉宾查看详情",'slow');
            return false;
        }
        $(this).attr('href',$(this).attr('href')+'?guestId='+elems[0].id);
    });
});

    
//初始化table(固定字段)
function initTable(data){
    $('#texttable').bootstrapTable({
        dataLocale: 'zh-CN',               //表格汉化
        toolbar: '#toolbar',                //工具按钮用哪个容器
        striped: true,                      //是否显示行间隔色
        cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
        pagination: true,                   //是否显示分页（*）
        showExport:true,
        sortable: true,                     //是否启用排序
        sortOrder: "asc",                   //排序方式
        sidePagination: "client",           //分页方式：client客户端分页，server服务端分页（*）
        pageNumber:1,                       //初始化加载第一页，默认第一页
        pageSize: 10,                       //每页的记录行数（*）
        pageList: [10, 20, 30, 40, 50],        //可供选择的每页的行数（*）
        search: true,                      
        strictSearch: false,
        showRefresh: true,                  //是否显示刷新按钮
        columns: [{
            align: 'center',
            width: 30,
            formatter: function(value,row,index){
                return index+1;
            }
        }, {
            checkbox: true,
            valign: 'middle'
        },
        {
            field: 'id',
            title: '嘉宾id',
        },
        {
            field: 'state',
            title: '邀请状态',
            align: 'center',
            sortable: true,
            width: 120,
            formatter:function(value,row,index){
                if(value == '1'){ // 未邀请
                    return '未邀请';
                } else if(value == '2'){ // 已发邀请
                    return '已发邀请';
                } else if(value == '3'){ // 接受邀请
                    return '接受邀请';
                }
            }
        },
        {
            field: 'chineseName',
            title: '姓名',
            align: 'center',
            width: 110,
            sortable: true
        },{
            field: 'unit',
            title: '单位',
            align: 'center',
            sortable: true
        },{
            field: 'duty',
            title: '职务',
            align: 'center',
            sortable: true
        },{
            field: 'introduction',
            title: '嘉宾简介',
            align: 'center'
        },{
            field: 'contactMobile',
            title: '联系手机',
            align: 'center'
        }, {
            field: 'contactPeople',
            title: '联系人',
            align: 'center'
        }, {
            field: 'portrait',
            title: '头像',
            align: 'center',
            formatter: function(value,row,index){
              return '<img class="tbImg" style="width:50px;" src="'+basePath+value+'"></img>';
            },
            events: {
                    'mouseover .tbImg': function (e, value, row, index) {
                        showBigImg(e,value);
                    },
                    'mouseout .tbImg': function (e, value, row, index) {
                        $(".bigImg").css('display','none');
                    }
            }
        },{
            field: 'option',
            title: '操作',
            width: 86,
            align: 'center',
            formatter: function(value,row,index){
              return '<span class="glyphicon glyphicon-pencil tabEdit cursor" aria-hidden="true"></span>&nbsp'+'<span class="glyphicon glyphicon-trash tabDel cursor" aria-hidden="true"></span>';
            },
            events: {
                    'click .tabEdit': function (e, value, row, index) {
                        //修改表单内容
                        $(".modification").show(1000);  
                        showTableForm(row);       
                    },
                    'click .tabDel': function (e, value, row, index) {
                        myConfirm("确定删除", function(){
                            var clickThis = this;
                            //删除当前数据
                            $.myAjax({
                                url: basePath + "admin/activity/expert/del.do",
                                data:{
                                    id:row.id,
                                    activityId: $("#activityId").val()
                                },
                                success:function(result){
                                    var _this = $(clickThis);
                                    if(result.flag){    
                                        _this.parent().parent().remove();
                                        setTimeout(function(){
                                            initPage();  
                                        },1200);                                        
                                    }else{
                                        myConfirm(result.msg);
                                    }
                                },
                                error:function(){
                                    myAlert("请求失败!", "slow");
                                }
                            });
                        }); 
                    }
            }
        }]    
    });
    $('#texttable').bootstrapTable('hideColumn', 'id');
    $("#texttable").bootstrapTable('load', data);
};
//初始化table（自定义字段）
function initDiyTable(tabTitle,tabData){
    var column1 = [{
            align: 'center',
            width: 30,
            formatter: function(value,row,index){
                return index+1;
            }
        }, {
            checkbox: true,
            valign: 'middle'
        }, {
            field: 'id',
            title: '嘉宾id',
        }];
    for(var i=0;i<tabTitle.length;i++){
        var column = {};
        column.field = tabTitle[i].name;
        column.title = tabTitle[i].showName;
        column.align = 'center';
        column.valign = 'middle';
        column.sortable = true;
        column1.push(column);
    };
    var options = {
            field: 'option',
            title: '操作',
            width: 60,
            align: 'center',
            valign: 'middle',
            formatter: function(value,row,index){
              return '<span class="glyphicon glyphicon-trash tabDel cursor" aria-hidden="true"></span>';
            },
            events: {'click .tabDel': function (e, value, row, index) {
                    myConfirm("确定删除", function(){
                        var clickThis = this;
                        //删除当前数据
                        $.myAjax({
                            url: basePath + "admin/activity/expert/del.do",
                            data:{
                                id:row.id,
                                activityId: $("#activityId").val()
                            },
                            success:function(result){
                                var _this = $(clickThis);
                                if(result.flag){    
                                    _this.parent().parent().remove();
                                    setTimeout(function(){
                                        initPage();  
                                    },1200);                                        
                                }else{
                                    myConfirm(result.msg);
                                }
                            },
                            error:function(){
                                myAlert("请求失败!", "slow");
                            }
                        });
                    }); 
                }
            }
        };

    column1.push(options);
    $('#texttable').bootstrapTable({
            dataLocale: 'zh-CN',               //表格汉化
            toolbar: '#toolbar',                //工具按钮用哪个容器
            striped: true,                      //是否显示行间隔色
            cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
            showExport:true,
            pagination: true,                   //是否显示分页（*）
            sortable: true,                     //是否启用排序
            sortOrder: "asc",                   //排序方式
            sidePagination: "client",           //分页方式：client客户端分页，server服务端分页（*）
            pageNumber:1,                       //初始化加载第一页，默认第一页
            pageSize: 10,                       //每页的记录行数（*）
            pageList: [10, 20, 30, 40, 50],     //可供选择的每页的行数（*）
            search: true,                      
            strictSearch: false,
            showRefresh: true,                  //是否显示刷新按钮
            columns: column1    
    });
    $('#texttable').bootstrapTable('hideColumn', 'id');
    $("#texttable").bootstrapTable('load', tabData);
};
//初始化页面
function initPage(){
    $("#activityId").val(sessionStorage.getItem('actId'));
    $.myAjax({
        url: basePath + "admin/activity/expert/list.do",
        data: {id: $("#activityId").val()},
        success: function(result){
            if(result.flag){
                // console.log(result);
                var data = result.data;                     
            }else{
                myAlert(result.msg,'slow');
            }
            // 判断是否是自定义字段
            if(data.field){
                initDiyTable(data.field,data.expertList);
            } else {
                initTable(data.expert);
            }
        },
        error: function(){
            myAlert("请求失败!", "slow");
        }
    })
};
//表单验证
$("#tabaddForm").bootstrapValidator({
    message: 'This value is not valid',
    feedbackIcons: {
        valid: 'glyphicon glyphicon-ok',
        invalid: 'glyphicon glyphicon-remove',
        validating: 'glyphicon glyphicon-refresh'
    },
    fields: {
        chineseName: {
            validators: {
                notEmpty: {
                    message: '姓名不能为空'
                }
            }
        },
        duty: {
            validators: {
                notEmpty: {
                    message: '职务不能为空'
                }
            }
        },
        contactMobile: {
            validators: {
                regexp: {
                    regexp: /^1[34578]\d{9}$/,
                    message: '请输入正确的手机号！'
                }
            }
        }
    }
});
//修改/新增
function showTableForm(data){
    if(data){
        $("#actiId").val(data.id);
        $("#activityId").val(sessionStorage.getItem('actId'));
        $(".chineseName").val(data.chineseName);
        $(".unit").val(data.unit);
        $(".duty").val(data.duty);
        $(".contactMobile").val(data.contactMobile);
        $(".contactPeople").val(data.contactPeople);
        $(".introduction").text(data.introduction);
        // if(data.state=="1"){
        //    $() 
        // }
        $(".state").val(data.state);
        $(".modification").show(1000);
    } else {
        $("#tabaddForm input").val('');
        $(".introduction").text('');
        $(".state").val("1");
        $("#activityId").val(sessionStorage.getItem('actId'));
        $(".modification").show(1000);
    }
}
// 鼠标移入查看大图
function showBigImg(event,value){
    var e = event || window.event;
    var scrollX = document.documentElement.scrollLeft || document.body.scrollLeft;
    var scrollY = document.documentElement.scrollTop || document.body.scrollTop;
    var x = e.pageX || e.clientX + scrollX;
    var y = e.pageY || e.clientY + scrollY;
    $(".bigImg").attr('src',basePath+value);
    $(".bigImg").css({
        'position':'absolute',
        'left':(x-200)+'px',
        'top': y+'px',
        'display':'block',
        'z-index': '90000'
    });
} 

// form序列化为对象
jQuery.prototype.serializeObject=function(){  
    var a,o,h,i,e;  
    a=this.serializeArray();  
    o={};  
    h=o.hasOwnProperty;  
    for(i=0;i<a.length;i++){  
        e=a[i];  
        if(!h.call(o,e.name)){  
            o[e.name]=e.value;  
        }  
    }  
    return o;  
};   
</script>
