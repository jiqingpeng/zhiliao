@charset "utf-8";

/* 页头、页脚、左侧菜单公共样式 */
body { background: #fff;  min-width: 1366px; }
#header, #sysnav, #content, #footer { width: 100%; margin:0 auto; }

#header { height: 30px; background: #f0f0ef; color: #333; line-height: 30px; font-size: 12px; }
#lineicon { background: url(../img/hotline.png) no-repeat; display: inline-block; width: 16px; height: 12px; margin: 0 8px 0 20px; }
.userinfo { float: right; color: #333; }
#user { margin: 0 20px 0 10px; }
#userinfo a { color: #333; }
#userinfo a:hover { color: #ff8400; text-decoration: underline; }

.logout, .userRegiste { margin: 0 24px 0 10px; }

/*#usericon { display: inline-block; width: 8px; height: 6px; margin: 0 10px 0 10px; }*/


#sysnav { height: 60px; color: #4c4c4c; position: relative; background: #fff; }
#logo { height: 43px; width: 131px; display: inline-block; margin: 8px 0 0 24px; }
.nav { position: absolute; bottom: 25px; right: 10px; }
.nav a, .nav a:link { margin-right: 30px; color:#4c4c4c; text-decoration: none; }

#content { border-top: 2px solid #e37903; position: relative; min-height: 570px; vertical-align: top; }

/* 左侧菜单样式 */
#menu {
	width: 13%;
	height: 100%;
  	/*min-width: 200px;*/
  	min-width: 146px;
  	min-height: 652px;
  	
	background-color: #eaeff3;
	border-right: 1px solid #c6c9ce;
	box-sizing: border-box;
	position: relative;
	display: inline-block;
	z-index: 20;
}
#pagefunction { width: 100%; height: 44px; border-bottom: 1px solid #c99a4b; line-height: 44px; text-align: center; font-size: 16px; color: #a9a9a9; }

#menulist {
	position: relative;
}
#menulist .menubar { width:100%; height:40px; font-size: 14px; line-height: 40px; cursor:pointer; }
#menulist span { color: #6d6c71; }
#menulist .menulink, .menulink:link { color: #6d6c71; width: 100%; height: 40px; display: inline-block; }
#menulist .decorate, .active01 { height: 16px; width: 16px; margin: 12px 24px 0 16%; }
#menulist .active02 { color: #fff; }
#menulist .indicate, .active03 { display: none; height: 10px; width: 8px; float: right; margin: 15px -1px 0 0; background: url(../img/indicate.png) no-repeat; }
#menulist .active { color:#fff; background: url(../img/menulistbg.png) repeat-x; }
#menulist .active03 { display: inline-block; }

#menulist .decorate, .active01a { height: 16px; width: 16px;  display: inline-block; position: relative; top: 1px; color:#fff;}
#menulist .active02a { color: #fff; }
#menulist .indicate, .active03a { display: none; height: 10px; width: 8px; float: right; margin: 15px -1px 0 0; background: url(../img/indicate.png) no-repeat; }
#menulist .activea { color:#fff; background: url(../img/menulistbg.png) repeat-x; }
#menulist .active03a { display: inline-block; }

/* 左侧二级菜单样式 */

#subMenu {
	width: 9%;
	position: absolute;
	top: 24px;
	left: 18px;
	z-index: 999;
}
#contentBody {
	width: 91%;
	position: relative;
	left: 9%;
	padding-top: 24px;
}

/* 如果页面是表单 用class mops-form */
.mops-form {
	margin-left: -30px;
}
/* 如果页面是表格 用class mops-table */
.mops-table {
	padding-left: 34px;
}

#subMenuBody {
	width: 90%;
	background-color: #eaeff3;
	margin: 0 auto;
	color: #666;
}
#subMenuBody li {
	height: 32px;
	border-radius: 4px 4px;
	line-height: 32px;
	text-align: center;
	cursor: pointer;
	color: #666;
}
#subMenuBody li:hover {
	color: #ff8400;
}
.menuAct {
	background: url(../img/menulistbg.png) repeat-x;
	color: #fff !important;
}

