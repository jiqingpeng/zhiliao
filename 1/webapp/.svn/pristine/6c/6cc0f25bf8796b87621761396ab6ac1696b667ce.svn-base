        success: function (result) {
            var data = $.parseJSON(result);
            if(data.flag){
                myAlert(data.msg);
                $(".emailcon").hide(1000);
            } else {
                myAlert(data.msg,'slow');
            }
        }
    };
    $("#emailform").ajaxForm(options);

    $(".emailCancel").click(function(){
        $(".emailcon").hide(1000);
    });
    // ********************* 邮件部分-end *****************
    // ********************* 站内信部分 *****************
