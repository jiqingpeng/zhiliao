<script type="text/javascript">
//初始化页面
function initPage(){
    $.myAjax({
        url: basePath + 'admin/activity/shuttleplan/list.do',
        data: {id:$("#id").val()},
        success: function(result){
            // console.log(result);
            if(result.flag){
                initTable(result.data.shuttlePlanPeopleList);
            }
        },
        error: function(result){
            myAlert("请求失败!",'slow');
        }
    });
}
initTable()
//table表格
function initTable(data){
	$('#texttable').bootstrapTable({
        dataLocale: 'zh-CN',                //表格汉化        
        toolbar: '#toolbar',                //工具按钮用哪个容器       
        striped: true,                      //是否显示行间隔色
        cache: false,   
        showExport:true,                    
        pagination: true,                   //是否显示分页（*）
        sortable: true,                     //是否启用排序
        sortOrder: "asc",                   //排序方式
        sidePagination: "client",           
        strictSearch: false,
        pageNumber:1,                       //初始化加载第一页，默认第一页
        pageSize: 10, 
        pageList: [10, 20, 30, 40, 50],
        search: true,                       
        showRefresh: true,                  //是否显示刷新按钮
        // showColumns: true,
        columns: [
            {
                align: 'center',
                // width: 30,
                formatter: function(value,row,index){
                    return index+1;
                }
    		},
            {
                field: 'notice',
                title: '已邮寄',
                align: 'center',
                // width: 80
            },
            {
                field: 'name',
                title: '姓名',
                align: 'center',
                sortable: true,
                // width: 88
            },
            {
                field: 'type',
                title: '单位',
                align: 'center',
                sortable: true,
                // width: 78,
            },
            {
                field: 'hotelName',
                title: '开票单位名称',
                align: 'center',
                sortable: true
            },
            {
                field: 'inTime',
                title: '收件人',
                align: 'center',
                sortable: true
            },
            {
                field: 'totalDay',
                title: '收件人电话',
                align: 'center',
                sortable: true,
                // width: 85
            },
            {
                field: 'totalDay',
                title: '邮寄地址',
                align: 'center',
                sortable: true,
                // width: 85
            }
        ]
    });
    $("#texttable").bootstrapTable('load', data);
};

//获取文本宽度
var textWidth = function(text){ 
    var sensor = $('<pre>'+ text +'</pre>').css({display: 'none'}); 
    $('body').append(sensor); 
    var width = sensor.width();
    sensor.remove(); 
    return width;
};
</script>
