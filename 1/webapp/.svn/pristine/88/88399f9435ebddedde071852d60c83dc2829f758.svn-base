	$(".saveinfo").click(function(){
		var uedContent = editor.getContent();
		
		var postData = 'id=' + $("#id").val() +	'&introduction=' + uedContent;
		$.myAjax({
			url: basePath + "admin/activity/save.do",
			data: postData,
			success: function(result){
