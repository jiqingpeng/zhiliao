        $.myAjax({
            url: basePath + "admin/activity/get.do",
            data: {id:$("#id").val()},
            success: function(result){
                $(".loading").remove();
                editor.ready( function() { // 富文本实例化完成
                    editor.setContent(result.data.activity.introduction);
                });
                initImg(result.data.imageUrl);
            },
