.left_icon img, .right_icon img{
    width: 30px;
    transform:rotate(270deg);
    position: absolute;
    top: 40%;
    right: 10px;
    opacity: 0.3;
}
.right_icon img{
    right: auto;
    left: 10px;
    transform:rotate(90deg);
}
