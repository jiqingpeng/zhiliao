<script>
$(function(){
	initTable();
});

//table表格
function initTable(data){
    $('#texttable').bootstrapTable({
        //data: str,
        dataType: 'json',                   //数据格式
        dataLocale: 'zh-US',               //表格汉化
        // toolbar: '#toolbar',
        striped: true,                      //是否显示行间隔色
        cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
        pagination: true,                   //是否显示分页（*）
        sortable: true,                     //是否启用排序
        sortOrder: "desc",                  //排序方式
        // search: true,                  
        // searchFormatter: false,
        // showRefresh: true,                  //是否显示刷新按钮
        cellStyle: true,
        checkbox : true,
        //height: 560,
        sidePagination: "client",           //分页方式：client客户端分页，server服务端分页（*）
        pageNumber:1,                       //初始化加载第一页，默认第一页
        pageSize: 10,                       //每页的记录行数（*）
        pageList: [10, 15, 20],        //可供选择的每页的行数（*）
        columns: [
        {
            field: 'id',
            align: 'center'
        },{
            field: 'num',
            width: 40,
            align: 'center',
            formatter: function(value,row,index){
                      return index+1;
            }
        }, {
            field: 'title',
            title: '新闻标题',
            align: 'center',
            sortable: true  //排序
        },{
            field: 'author',
            title: '作者',
            align: 'center',
            sortable: true ,
        },{
            field: 'ctime',
            title: '发布时间',
            align: 'center'
        },{
            field: 'option',
            title: '操作',
            width: 86,
            align: 'center',
            formatter: function(value,row,index){
              return '<span class="glyphicon glyphicon-trash tabDel cursor" aria-hidden="true"></span>';
            },
            events: {
                'click .tabDel': function (e, value, row, index) {
                        myConfirm("确定删除", function(){
                            var clickThis = this;
                            //删除本条数据
                            url=basePath + "admin/activityschedual/del.do";
                            $.myAjax({
                                url: url,
                                data:{id:row.id},
                                success:function(result){
                                    var data=result.data;
                                    if(result.flag){
                                        $(clickThis).parent().parent().remove();
                                        setTimeout(function(){
                                            location.reload();  
                                        },20)
                                    }else{
                                        myConfirm(result.msg);
                                    }
                                },
                                error:function(){
                                    myAlert("请求失败!", "slow");
                                }
                            });
                        });
                    }
                }
        }]
    });
    $('#texttable').bootstrapTable('hideColumn', 'id');
    
    if(data){
        $('#texttable').bootstrapTable("load",data);
    }
    
}
	
</script>
