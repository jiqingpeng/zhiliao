<script src="../../../js/zepto.js"></script>
<script src="../../../js/app/mtCommon.js"></script>
<script>
$(function(){
	var actId = Request('actId');
	$.myAjax({
		url : basePath + 'mt/user/activity/get.do',
		data: {id:actId,type:"base,org"},
		success : function(result){
			if(result.flag){
				var org = result.data.org;
				//判断组织机构是否为空
				if(org.length == 0){
					myConfirm("暂无组织机构内容");
					return;
				};
				var str = '';
				var con = '';
				for(var i = 0; i < org.length; i ++){
					str +=
						'<article class="org-unit">'+
							'<header class="org-tit">'+
								'<span class="org-line"></span>'+
								'<span class="org-txt">'+org[i].name+'</span>'+
							'</header>'+
							'<section class="org-list">';
						var string = '';
						var orgList = org[i].value;
						for(var j = 0; j < orgList.length; j ++){
							 string += '<div class="org-name">'+orgList[j]+'</div>';
						};
					str += string +'</section>'+'</article>';
				};
				$('.org').html(str);
				
			}else{
				myAlert(result.msg, "slow");
			}
		},
		error: function(){
			$(".loading").remove();
			myConfirm("请求失败!");
		}
	});
})
</script>
