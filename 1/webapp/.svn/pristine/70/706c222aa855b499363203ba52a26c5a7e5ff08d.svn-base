/*invoice*/
.content{
    width:100%;
    position: fixed;
    top:48px;
    left:0;
    overflow-y: auto;
}
.invoice  .mess{
    /*position: fixed;
    bottom:40px;
    left:0;
    overflow-y: auto;*/
}
.invoice  .mess-item{
    width:94%;
    height:40px;
    line-height: 40px;
    padding:0 3%;
    /*border-bottom: 1px solid #eee;*/
    background-color: #fff;
}
.invoice .btm-space{
    margin-bottom: 10px;
    border-bottom: none;
}
.invoice .mess-item .txt{
    display: inline-block;
    width:28%;
}
.invoice .mess-item .inp{
    display: inline-block;
    width:60%;
    border:none;
    outline:none;
}
.invoice .mess-item .star{
    margin-left:4%;
    color:red;
}
.invoice .invoiceType {
    padding: 0 3px;
}
.invoice .send-group{
    display: none;
}
.invoice .cxselect{
    width:20%;
}
.invoice .mess-box{
    display: none;
}
.invoice .btn{
    width:100%;
    height:40px;
    position: fixed;
    bottom:0;
    left:0;
    background:#f60;
    margin:0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    color:#fff;
    border-radius:4px;
}
.location{
    border:none;
    outline:none;
    margin-left:28%;
    width:60%;
}
.active{
    display: none;
}
.pay-msg p, .bank-msg p{
    text-indent: 2em;
    line-height: 20px;
    font-size: 14px;
    color: #888;
}
