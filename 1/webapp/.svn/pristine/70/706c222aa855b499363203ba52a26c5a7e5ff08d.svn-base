body{
    position: relative;
}
.content{
    width:100%;
    position: fixed;
    top:48px;
    left:0;
    bottom:40px;
    overflow-y: auto;
    background:#f4f4f4;
}
.content .pay-tit{
    border-bottom: 1px solid #ddd;
    background-color: #fff;
}
.content .icon{
    width:14px;
    margin-right:10px;
}
.content .list{
    width:94%;
    padding:10px 3%;
    background:#fff;
    margin-bottom:10px;
}
.pay-mess {
    border-bottom: 1px solid #ddd;
    background-color: #fff;
    border-radius: 0 0 6px 6px;
}
.content .addressdate{
    height: 30px;
    margin-top:10px;
    display: flex;
    align-items: center;
}
.content .addressdate .date{
    margin-left:10px;
}
.content .date{
    margin-left:-5px;
}
.content .bord{
    border-bottom:1px solid #ccc;
}
.content .bord1{
    border-bottom:1px solid #ccc;
}
.space-center{
        display: flex;
        align-items: center;
        justify-content: center;
}
.space-between{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.allMoney {
    background-color: #fff;
    height: 40px;
    line-height: 40px;
    width: 28%;
    padding-left: 8px;
}
.count {
    color: #ff6100;
}
/*paysure*/
.pay-btnlist{
        width:100%;
        position:fixed;
        left:0;
        bottom:0;
    }
.sure .pay-calc{
    width:50%;
}
.pay-btn{
    width:72%;
    height:40px;
    background:#f60;
    color:#fff;
}
.note-cont{
    margin-left:5%;
}
.item{
    padding: 4px 0;
}
.food{
    width:100%;
    position:fixed;
    bottom:0;
    left:0;
    display: flex;
    align-items: center;
}
.food .f-nav{
    width:50%;
    height:40px;
    line-height: 40px;
    text-align:center;
    background:#f60;
    color:#fff;
}
