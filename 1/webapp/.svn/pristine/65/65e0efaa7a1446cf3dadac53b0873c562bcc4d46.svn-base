<script>
	$(function(){
		//init获取页面信息和登陆状态
		var url=basePath+"index/activity.do";
		//截取ID
		var id = '';
		if(Request('location')){
			id = Request('location');
			$("#id").val(id);
		} else if(sessionStorage.getItem('actId')) {
			id = sessionStorage.getItem('actId');
			$("#id").val(id);
		}

		if(!id){ // 如果没有id,禁止请求
			return false;
		}
		$.myAjax({
			url: url,
			type: 'GET',
			data:{id:id},
			success:function(result){
				console.log(result);
				if(result.flag){
					//会议名称
					$('.messName').html(result.data.activity.name);
					//单位名称
					$('.messCompany').html(result.data.orgName).attr('href','http://'+result.data.orgUrl+'.gconfs.com');
					//会议地址
					initMap(result.data.activity.longtitude,result.data.activity.latitude);
					
					//时间截取
					var stime=result.data.activity.stime.substr(0,11);
					var paperEtime=result.data.activity.paperEtime.substr(0,11);
					var signupStime=result.data.activity.signupStime.substr(0,11);
					var signupEtime=result.data.activity.signupEtime.substr(0,11);
					//会议时间
					$('#mess_time').append('<div><p class="bold">会议日期</p><p class="color_ccc">&nbsp'+stime+'</p></div><div><p class="bold">征文投稿截止日期</p><p>&nbsp'+paperEtime+'</p></div><div><p class="bold">现场报道日期</p><p>&nbsp'+signupStime+'至'+signupEtime+'</p></div>');	
					//会议地点
					// $('#mess_address').append('<div><p class="bold">城市</p><p>&nbsp'+result.data.activity.city+'</p></div><div><p class="bold">地址</p><p>&nbsp'+result.data.activity.contactAddress+'</p></div>');
					$('#mess_address').append('<div><p>'+result.data.activity.city+'</p></div><div><p>&nbsp;'+result.data.activity.contactAddress+'</p></div>');
					//动态信息
					for(var i=0;i<result.data.news.length;i++){
						if(i>=3){
							break;
						};
						var str = '<p>' + 
								'<input type="hidden" value="'+result.data.news[i].id+'"/>' +
								'<a target="_blank" href="" class="newsDetail">' + result.data.news[i].title +
								'</a>' +
								'</p>';
						// $('.news').append('<p><a href="" class="newsDetail">'+result.data.news[i].title+'</a></p>');
						$('.news').append(str);
					};
					$(document).on('click', '.newsDetail', function(){
						var id = $(this).prev().val();
						$(this).attr('href', 'newsDetail.html?newsId='+id);
					})
					//会议议题
					$('#mess_issue').html(result.data.activity.issue)
	    			$('#totalAttend').html(result.data.activity.totalAttend);
	    			$('.issueMove').html(result.data.activity.issue);
					//会议简介
					$('#introduction').html(result.data.activity.introduction);
					//组织机构
					for(var i=0;i<result.data.activity.activityOrginfoList.length;i++){
						$('#activityOrginfoList').append('<p><a href="javascript:;">'+result.data.activity.activityOrginfoList[i].name+'</a></p>');
						$('.orginfoMove').append('<p><a href="javascript:;">'+result.data.activity.activityOrginfoList[i].name+'</a></p>');
					};
					
					//联系方式
					var str='<li id="contactPhone">&nbsp联系人:&nbsp'+result.data.activity.contactUser+'</li><li id="contactPhone">联系电话:&nbsp'+result.data.activity.contactPhone+'</li><li id="contactEmail">联系邮箱:&nbsp'+result.data.activity.contactEmail+'m</li><li id="contactEmail">联系地址:&nbsp'+result.data.activity.contactAddress+'</li>';
					$('#contact_our').append(str);
					//会议图片
					for(var i=0;i<result.data.imageUrl.length;i++){
						$('#banner .img').append('<li><a href=""></a><img class="img1" src="'+basePath+result.data.imageUrl[i]+'" alt="第'+(i+1)+'张图片"></a></li>');
					};
					pictureShow('#banner',{
				      autoplay:true,
				      mousehover:true,
				      round:true
    				});
					// 获取用户登陆状态信息
					if(result.status.nick){
						$('#user_name').html(result.status.nick);
						$('#user_center').html('用户中心');
						$('#login_out').html('注销');
					};
					
				}else{
					alert(result.msg);
				};
			},
			error:function(){
				alert("请求失败");
			}
		});
		// 报名
		$(".enroll").on('click',function(){
			var url = basePath+'index/status.do';
