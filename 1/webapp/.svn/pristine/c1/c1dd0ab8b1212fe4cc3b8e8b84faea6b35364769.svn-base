html, body {
	position: relative;
	height: 100%;
}
body {
	background: #eee;
	font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
	font-size: 14px;
	color:#000;
	margin: 0;
	padding: 0;
}
.swiper-container {
	width: 100%;
	height: 100%;
}
.swiper-slide {
	text-align: center;
	font-size: 18px;
	background: #fff;
	// display: -webkit-box;
	// display: -ms-flexbox;
	// display: -webkit-flex;
	// display: flex;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	// -webkit-justify-content: center;
	// justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	-webkit-align-items: center;
	align-items: center;
	background:url(img/bg.jpg) no-repeat;
	flex-direction: column;
}

p{
	padding:0;
	margin:0;
}
li{
	list-style-type: none;
}
.first-screen .miss-tit{
	margin-top:5%;
}
.first-screen .mess-item{
	margin-top:10%;
}
.first-screen .mess-item .mess-item-tit{
	font-size:50px;
	padding:0;
	margin:0
}
.first-screen .mess-item .mess-item-count{
	padding:0;
}
.first-screen .bord{
	opacity:0;
	border:4px solid #fff;
	width:100%;
	height:100%;
	position: absolute;
	left:0;
	top:0;
}

.first-screen .mess-city{
	margin-top:30%;
	margin-left:-50%;
	opacity:0;
}
.first-screen .mess-time{
	margin-top:5%;
	margin-left:-30%;
	opacity:0;
}
.first-screen .mess-org{
	margin-top:44%;
	opacity:0;
}
.secont-screen .title{
	font-size:20px;
	margin-top:20%;
	opacity:0;
}
.secont-screen .conent{
	margin-top:15%;
}
.secont-screen .conent>div{
	margin-top:5%;
	text-align: left;
	margin-left:10%;
}
.three-screen .title {
	margin-top:10%;
	position:relative;
	opacity:0;
}
.three-screen .conent {
	margin-right:5%;
	margin-left:-5%;
	font-size:14px;
}
.three-screen .conent .guest{
	display:flex;
	border:1px solid red;
	align-items:center;
	margin-top:10%;
	position:relative;
	top:0;
	left:0;
	opacity:0;
}
.three-screen .conent .guest .guest-img{
	width:250px;
	height:100px;
	border:1px solid red;
}
.three-screen .conent .guest .guest-message{
	margin-left:5%;
}
.three-screen .conent .guest .guest-name{
	text-align: left;
}
.three-screen .conent .guest .guest-info{
	text-align: left;
}
.four-screen .title{
	margin-top:10%;
}
.four-screen .sign{
	display: flex;
	flex-direction: column;
	margin:0 10%;
	margin-top:10%;
}
.four-screen .sign input{
	height:25px;
	margin-top:3%;
}

.four-screen .sign .submit{
	margin-top:3%;
}
.four-screen .info{
	margin:0 5%;
	margin-top:60%;

}
.four-screen .info p{
	margin-top:5%;
	text-align: left;
}
.five-screen .title{
	margin-top:10%;
	position:relative;
	left:0;
	top:0;
	opacity:0;
}
.five-screen .content{
	margin:0 10%;
	position:relative;
	left:0;
	top:0;
	opacity:0;
}
.five-screen .content .message{
	text-align: left;
	margin-top:5%;
}
