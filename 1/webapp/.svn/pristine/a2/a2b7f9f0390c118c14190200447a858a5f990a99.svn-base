<script type="text/javascript">
$(function(){
	// 获取左侧菜单列表数据(参数为请求地址)
	initMenu('../../js/data/attend.json','我的活动');
	$("#submenumark").css('display','none');
	//init获取页面信息
		var url=basePath+"index/init.do";
		$.ajax({
			url: url,
			type: 'POST',
			dataType: 'json',
			xhrFields: {
       			withCredentials: true
    		},
    		crossDomain: true,
			success:function(result){
				console.log(result)
				//会议
				for(var i=0;i<result.data.conference.length;i++){
					if(i>=10){
						break;
					}
					//截取时间
					var stime=result.data.conference[i].stime.substr(0,11);
					//填充数据
					var str='<li><input class="fl" type="hidden" value="'+result.data.conference[i].id+'"/><span class="time">'+stime+'</span><span class="place">'+result.data.conference[i].city+'</span><a class="on_act" href="#">'+result.data.conference[i].name+'</a></li>'
					$('.myActdetail').append(str);
				};
				//登陆状态
				if(result.data.user){
					$('.log_group').addClass('active');
					$('.log_group2').removeClass('active');
					$('#user_name').html(result.data.user.name);
				};
			},
			error:function(){
				alert('请求失败');
			}
		});
		//链接跳活动详情
		$(document).on('click','.on_act',function(){
			window.location.href='myMess.html?location='+$(this).prev().prev().prev().val();
		});
		//首页
		$(document).on('click','.nav a',function(){
			$(this).attr('href','../index/index.html');
		});
		//注销
		$(document).on('click','#userinfo a',function(){
			url=basePath+"login/out.do";
			$.ajax({
				url: url,
				type: 'GET',
				dataType: 'json',
				xhrFields: {
	       			withCredentials: true
	    		},
	    		crossDomain: true,
				success:function(result){
					window.location.href="../index/index.html"
				}
			});
		});
});
</script>
