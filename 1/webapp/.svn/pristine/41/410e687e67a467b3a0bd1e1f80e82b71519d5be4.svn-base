<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>缴费</title>
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
<link rel="stylesheet" type="text/css" href="../../../css/app/style.css">
<link rel="stylesheet" href="../../../css/weixin/pay.css">
</head>
<body>
    <div class="head">
        <div class="navImg">
            <img src="../../../img/app/arrowLeft-icon.png">
        </div>
        <div class="navDetail">发票信息</div>
    </div>
    <div class="content">
        <input type="hidden" class="pay-type">
        <section class='pay-tit'>
            <h2 class="title list">
                <span class="tit-con"></span>
            </h2>
            <div class="addressdate list">
                <span class="address">
                    <img src="" alt="">
                    <span class="address">海淀区创业广场</span>
                </span>
                <span class="date">
                    <img src="" alt="">
                    <span class="stime"></span>
                    <span>-</span>
                    <span class="etime"></span>
                </span>
            </div>
        </section>
        <section class="invo-type">
            <div class="list  space-between">
                <span>发票类型</span>
                <span>发票类型</span>
            </div>
        </section>
        <section class="invo-msg">
            <div class="list">
                <p>发票信息</p>
                <p class="taxpayerName"></p>
                <p class="taxpayerId"></p>
            </div>
        </section>
        <section class="invo-take">
            <div class="list">
                <p class="space-between">
                    <span>收票人信息</span>
                    <span></span>
                </p>
                <p class="name"></p>
                <p class="mobile"></p>
                <p class="address"></p>
            </div>
        </section>
    </div>
    
</body>
<script src="../../../js/zepto.js"></script>
<script src="../../../js/zepto.md5.js"></script>
<script src="../../../js/app/mtCommon.js"></script>
<script>
var id = Request("actId");
$(function(){
    init(id)
});
function init(id){
    var url = basePath+"user/activity/invoice/get.do?id="+id+"&type=1";
    $.myAjax({
        url: url,
        success: function (result) {
            if (result.flag) {
                console.log(result)
                var base = result.data.activity;
                //地点时间
                $('.tit-con').html(base.name);
                var stime = base.stime.substring(5,10);
                nstime = stime.replace(/-/,"/");
                $('.stime').html(nstime);
                var etime = base.etime.substring(5,10);
                netime = etime.replace(/-/,"/");
                $('.etime').html(netime);
                var activityInvoice = result.data.activityInvoice;
                if(activityInvoice){
                    $('.taxpayerName').html(activityInvoice[0].taxpayerName); 
                    $('.taxpayerId').html(activityInvoice[0].taxpayerId);
                    $('.name').html(activityInvoice[0].name); 
                    $('.mobile').html(activityInvoice[0].mobile);   
                    $('.address').html(activityInvoice[0].mailProvince+activityInvoice[0].mailCity+activityInvoice[0].mailLocation); 
                }
                
            };
        },
        error:function(){
            myConfirm("请求错误");
        }
    });
};


</script>
</html>