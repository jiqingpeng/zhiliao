<script type="text/javascript">
var confid = ''; 
var title = '';
var attendname = '';
var confdesc='',imgurl='';
var isSignUp = false; //是否已经报名
$(function(){
	confid = Request('id');
	$.myAjax({
		url: basePath + 'index/activity.do',
		data: {id: confid, type: '4'},
		success: function(result){
			console.log(result);
			if(result.flag){
				isSignUp = result.data.activity.signUp;
				if(result.status.nick){
					attendname = result.status.nick;
				}
				confdesc = result.data.activity.introduction;
				if(result.imageUrl){
					imgurl = result.imageUrl[0];
				}
				
				title = result.data.activity.name;
				$(".title").html(title);
				if(result.data.activity.signUp){  // 判断是否报名
					$(".takePart").addClass("sign");
				}
				var imgs = result.data.imageUrl;
				var str = '';
				for(var i=0;i<imgs.length;i++){
					str += '<li><img class="img'+(i+1)+'" src="'+basePath + imgs[i]+'" alt="第'+(i+1)+'张图片"></li>';
				}
				if(str){
					$(".img").html(str);
					// 图片轮播
					pictureShow('#detailImg',{autoplay:true,mousehover:true,round:true});
				}

				// 微信相关功能
				wxFn();
			}
		}
	});

	// 判断是否已经报名
	$(".isSignUp").click(function(){
		if(!isSignUp){
			myAlert("请先报名参会！","slow");
			return false;
		} 
	});

	$(".signup").click(function(){
		if(!isSignUp){
			myAlert("请先报名参会！","slow");
			return false;
		} else {
			checkin();
			return false;
		}
	});

	$(".takePart").click(function(){
		if($(this).hasClass("sign")){
			$(this).parent().attr("href","#");
			$("#cusmodal").modal("show");
		}
	});

	// 点击菜单
	var aDiv = $(".optionImg");
	aDiv.each(function(index){
		$(this).click(function(){
			var href = $(this).parent().attr('href');
			$(this).parent().attr('href',href+'?actId='+confid);
		})
	});
});

// 微信相关功能
function wxFn(){
	$.getJSON("../../wx/getjssign.do?url="+encodeURIComponent(location.href),function(json){
		wx.config({  
			debug: false,  
			appId: json.appId,  
			timestamp: json.timestamp,  
			nonceStr: json.noncestr,  
			signature: json.sign,  
			jsApiList: [  
				// 所有要调用的 API 都要加到这个列表中  		
				'checkJsApi',					   
				'onMenuShareTimeline',
				'onMenuShareAppMessage',
				'onMenuShareQQ',
				'onMenuShareWeibo',
				'startRecord', 
				'stopRecord',
				'translateVoice',
				'scanQRCode'

			]  
		});			
	});
}

