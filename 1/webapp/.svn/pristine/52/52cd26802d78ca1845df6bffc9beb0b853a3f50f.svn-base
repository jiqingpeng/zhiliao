$(".preserve").on("click", function(){
	myAlert("已保存");
})
$(".edit").on("click", function(){
	$(this).hide();
	$(".save").show();
	$(".cancel").show();
});
$(".cancel").on("click",function(){
	$(".edit").show();
	$(".save").hide();
	$(this).hide();
});
$(".save").on("click", function(){
	$(".edit").show();
	$(".cancel").hide();
	$(this).hide();
	myAlert("已保存");
});
