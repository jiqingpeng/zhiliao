function initPage(field){
	actId = Request('actId');
	$.myAjax({
		url: basePath + "user/activity/issue/list.do",
		data: {id: actId,field: field},
		success: function(result){
			$(".loading").remove();
			if(result.flag){
				console.log(result)
				var data = result.data.activityIssue;
				if(data == null || data.length == 0){
					myConfirm("暂无议题!");
					$(".interList").css("display", "none");
					return;
				};				
				var str = '';
				for(var i = 0; i < data.length; i++){
					if(data[i].thumbsUp < 0){
						data[i].thumbsUp = 0;
					};
					if(data[i].totalComment < 0){
						data[i].totalComment = 0;
					};
					str += '<div class="conList">' +
							'<div class="test">' + data[i].name + '</div>' +
								'<input type="hidden" value="'+ data[i].id + '"/>' +
								'<div class="testTil">'  +
									'<span class="comment">' + 
										'<img src="../../img/weixin/comment.png">' +
											data[i].totalComment +
									'</span>' +
									'<span class="like">' + 
										'<img src="../../img/weixin/like.png">' + 
											data[i].thumbsUp +
									'</span>' +
								'</div>' +
							'</div>' +
						'</div>';
				};
				$(".interList").html(str);
			}else{
				myAlert(result.msg, "slow");
			}			
		},
		error: function(){
			$(".loading").remove();
			myAlert("请求失败!");
		}
	});
}
</script>
