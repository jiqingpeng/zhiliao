		if(statu==1){
			console.log(2)
			var data={activityIssueId:activityIssueId,activityIssueCommentId:activityIssueCommentId,content:content,type:3};
		}else{
			var data={activityIssueId:activityIssueId,content:content,type:3};
			console.log(3)
		};
		$.myAjax({
			url:url,
			data:data,
			success:function(result){
