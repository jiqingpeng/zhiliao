<script type="text/javascript">
$(function(){
	initPage()
});
function initPage(){
	var str = '';
	$.myAjax({
		url: basePath + "mt/user/activity/get.do",
		data: {id:Request("id"),type:"guest"},
		success: function(result){
			console.log(result);
			if(result.flag){
				var name = '';
				var data = result.data.guest;
				for(var i = 0; i < data.length; i++){
					str += '<div class="guest">' +
						'<div class="intro_name">' +
							'<div class="picture"></div>' +
							'<div class="detailBox">' +
								'<div class="detail">' +
									'<span class="name">' + data[i].name + '</span>' +
									'<span class="describe">' + data[i].duty + '</span>' +
								'</div>' +
								'<div class="unit">' +
									'<span class="describe">' + data[i].unit + '</span>' +
								'</div>' +
							'</div>	' +
						'</div>' +
						'<div class="intro">' + data[i].introduction + '</div>' +
					'</div>';
				}
			}else{
				myAlert(result.msg);
			}
			$(".contain").html(str);
		},
		error: function(){
			myConfirm("请求失败!");
		}
	})
}

</script>
