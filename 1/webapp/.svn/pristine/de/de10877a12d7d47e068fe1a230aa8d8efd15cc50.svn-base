$(function(){
	// 获取左侧菜单列表数据(参数为请求地址)
    serialMenuAjax('admin/activity/menu.do', '用户管理', sessionStorage.getItem('actId'), initPage);
    (function(){
        var aLi = $("#subMenuBody li");
        aLi.each(function(index){
            $(this).click(function(){
                $(aLi).removeClass('menuAct');
                $(this).addClass('menuAct');
            });
        });
    })();
    // 获取ID值
    if(Request("actId") && Request("actId").length == 32){ // 链接地址中actId有值，且值正确
        sessionStorage.setItem('actId',Request("actId"));
    }
    $("#id").val(sessionStorage.getItem('actId'));
    $(".actId").val(sessionStorage.getItem('actId'));
    // 单个用户修改状态的样式操作
    $(document).on('click','.mystItem',function(){
        if($(this).is(':checked')){
            $(this).parent().siblings().find(".mystItem").removeAttr('checked');
        } else {
            return false;
        }
    });
    // 导出用户数据
    $("#downexcel").click(function(){
        if($(this).hasClass('noUser')){
            myConfirm("暂无参会人员数据！");
            return false;
        }
        var url = basePath + 'admin/attend/downexcel.do?id=' + $("#id").val();
        $(this).children().attr('href',url);
    })
    // 导出用户数据
    $("#downmodel").click(function(){
        var url = basePath + 'admin/attend/downmodel.do?id=' + $("#id").val();
        $(this).children().attr('href',url);
    })
    // ********************* 短信部分 *****************
    $(".message").click(function(){
        var elems = $("#texttable").bootstrapTable('getSelections');
        if(elems.length <= 0){
            myAlert("请选择要发送的人员",'slow');
            return false;
        }
        $(".messagecon").show(1000);
        $(".emailcon").hide();
        $(".noticecon").hide();
        var str ='';
        for(var i=0;i<elems.length;i++){
            str += '<button type="button" class="btn btn-default btn-xs">'+elems[i].name+'<input type="hidden" value="'+elems[i].id+'"/></button>';
        }
        $(".userListMsg").html(str);
    });
    $(".msgCancel").click(function(){
        $(".messagecon").hide(1000);
    });
    // 短信模板选择
    $("#msgmodelsel").change(function(){
        aStr = [];
        var htmlstr = '';
        var msgconstr = msgModel[$(this).val()];
        strOption(msgconstr,'${',0);
        for(var i=0; i<aStr.length; i++){
            if(i%2){
                htmlstr += '<input name="'+aStr[i]+'" class="msgInp" id="msgInp"/>';
            } else {
                htmlstr += '<span>'+aStr[i]+'</span>';
            }
        }
        if($(this).val() == 'activityInvitation'){
            var ext = '<br/><br/> <span style="color:#666;">例如：尊敬的用户，<input style="border:none;border-bottom:1px solid #ddd;" value=" 张三"/>邀请您参加<input style="border:none;border-bottom:1px solid #ddd;" value=" XXX单位"/>于<input style="border:none;border-bottom:1px solid #ddd;" value=" YYYY年MM月DD日"/>在<input style="border:none;border-bottom:1px solid #ddd;" value=" XXX地址"/>地点举办的<input style="border:none;border-bottom:1px solid #ddd;" value=" XXXX会议"/>活动，可用手机号登录www.gconfs.com了解详细信息（用户名为您手机号，默认密码为手机号后6位）</span>';

            $(".msgDetail").html(htmlstr + ext);
        } else {
            $(".msgDetail").html(htmlstr);
        } 
    });
    // 短信部分，输入区域自适应输入内容宽度
    $(document).on('keydown','.msgInp',function(e) {
        $(this).width(textWidth($(this).val())+25);
    });
    // 短信发送
    $(".sendmsg").click(function(){
        var msgTitle = $("#msgmodelsel").val();
        if(!msgTitle){
            myAlert("请选择短信模板并编辑短信！",'slow');
            return false;          
        }
        // 获取短信输入部分的内容
        var sendmsg = ''; //短信内容（用户输入部分）
        var sendmsgtemp = ''; //短信内容（用户输入部分）
        var string = "";
        string =  $(".msgInp").val();
        if(!(string.indexOf("&") == -1)){
            myConfirm("请不要使用&符号",function(){
                $(".msgInp").focus();
                setPotision(msgInp);
            });  
            return;
        };
        loading();
        $('.msgInp').each(function(index){
            var str=unescape($(this).val().replace(/&#x/g,'%u').replace(/;/g,''));
            if(index > 0){
                sendmsgtemp += ',"' + $(this).attr("name") + '":"' + str + '"';
            } else {
                sendmsgtemp += '"' + $(this).attr("name") + '":"' + str + '"';
            }
        });

        sendmsg = '{' + sendmsgtemp + '}';
        // 获取用户参会id
        var inps = $(".userListMsg input");
        var ids = '';
        for(var i=0;i<inps.length;i++){
            ids += '&attendId=' + $(inps[i]).val();
        }
        var postdata = 'msgTitle='+msgTitle+'&msgContext='+sendmsg+ids+"&id="+$("#id").val()+'&type=1';
        $.myAjax({
            url : basePath + 'admin/message/send.do',
            data : postdata,
            success : function(result){
                $(".loading").remove();
                if(result.flag){
                    myAlert(result.msg);
                    $(".messagecon").hide(1000);
                } else {
                    myAlert(result.msg,'slow');
                }
            },
            error : function(result) {
                $(".loading").remove();
                myAlert("请求失败!",'slow');
            }
        });
    });

    // ********************* 短信部分-end *****************
    // ********************* 邮件部分 *****************
    // 附件上传
    $(".attachFile").change(function(){
        var file = $(this).get(0).files[0];
        if(file){
            $(".attachName").val(file.name);
        }
    });
    $("#attachbtn").click(function(){
        $(".attachFile").trigger("click");
    });
    $(".email").click(function(){
        var elems = $("#texttable").bootstrapTable('getSelections');
        if(elems.length <= 0){
            myAlert("请选择要发送的人员");
            return false;
        }
        $(".emailcon").show(1000);
        $(".messagecon").hide();
        $(".noticecon").hide();
        var str ='';
        for(var i=0;i<elems.length;i++){
            str += '<button type="button" class="btn btn-default btn-xs">'+elems[i].name+'<input type="hidden" name="attendId" value="'+elems[i].id+'"/></button>';
        }
        $(".userListEmail").html(str);
    });
    // 邮件发送
    $(".sendemail").click(function(){
        if(!$("#emailtheme").val()){
            myConfirm("主题不能为空");
            return;
        };
        if(!editor.getContent()){
            myConfirm("邮件内容不能为空");
            return;
        };
        loading();
        $("#emailform").attr('action',basePath+'admin/email/send.do');
        $(".activityId").val($("#id").val());
        // 上传文件回显提示
        var options = {
            success: function (result) {
                var data = $.parseJSON(result);
                if(data){
                    $(".loading").remove();
                }
                if(data.flag){
                    myAlert(data.msg);
                    $(".emailcon").hide(1000);
                } else {
                    myAlert(data.msg,'slow');
                }
            },
            error: function(result){
                $(".loading").remove();
                myAlert("请求失败", "slow");
            }
        };
        $("#emailform").ajaxForm(options); 
        $("#emailform").submit();  
    });    

    $(".emailCancel").click(function(){
        $(".emailcon").hide(1000);
    });
    // ********************* 邮件部分-end *****************
    // ********************* 站内信部分 *****************
    $(".notice").click(function(){
        var elems = $("#texttable").bootstrapTable('getSelections');
        if(elems.length <= 0){
            myAlert("请选择要发送的人员",'slow');
            return false;
        }
        $(".noticecon").show(1000);
        $(".messagecon").hide();
        $(".emailcon").hide();
        var str ='';
        for(var i=0;i<elems.length;i++){
            str += '<button type="button" class="btn btn-default btn-xs">'+elems[i].name+'<input type="hidden" value="'+elems[i].id+'" name="attendId"/></button>';
        }
        $(".userListNotice").html(str);
        
    });
    // 站内信发送
    $(".sendNotice").click(function(){
        loading();
        $.myAjax({
            url : basePath + 'admin/usermsg/send.do',
            data : $("#noticeForm").serialize(),
            success : function(result){
                $(".loading").remove();
                if(result.flag){
                    myAlert(result.msg);
                    $(".noticecon").hide(1000);
                } else {
                    myAlert(result.msg,'slow');
                }
            },
            error : function(result) {
                $(".loading").remove();
                myAlert("请求失败!",'slow');
            }
        });
    });
    $(".NoticeCancel").click(function(){
        $(".noticecon").hide(1000);
    });
    // ********************* 站内信部分-end *****************

    $(".userInfoOk").click(function(){
        $(".userInfocon").hide(1000);
    });
    // 快捷筛选操作部分-待审核
    $("#waitAudit").click(function(){
        quickSearch('1');
    })
    // 快捷筛选操作部分-审核不通过
    $("#notAudit").click(function(){
        quickSearch('9');
    })
    // 快捷筛选操作部分-审核通过
    $("#audit").click(function(){
        quickSearch('2');
    })
    // 快捷筛选操作部分-已通知
    $("#notify").click(function(){
        quickSearch('3');
    })
    // 快捷筛选操作部分-已报到
    $("#attendance").click(function(){
        quickSearch('4');
    })
    // 全部
    $("#allUser").click(function(){
        $("#texttable").bootstrapTable('load',allData);
    })
    // 批量修改部分
    $(document).on('click','.waitAudit_all, .audit_all, .notify_all, .attendance_all',function(){
        if($(this).is(':checked')){
            var _this = this;
            var userids = [];
            var users = $("#texttable").bootstrapTable('getData',true);
            for(var i=0;i<users.length;i++){
                if(users[i].state > $(_this).val()){
                    myAlert('人员状态不能回退！','slow');
                    return false;
                }
            }
            myConfirm('确定要批量修改状态？',function(){
                for(var i=0;i<users.length;i++){
                    if(i == 0){
                        userids.push(users[i].id);
                    } else {
                        if(users[i].state != users[i-1].state){
                            myConfirm('确定要统一修改不同状态的人员？',function(){
                                for(var j=i;j<users.length;j++){
                                    userids.push(users[j].id);
                                }
