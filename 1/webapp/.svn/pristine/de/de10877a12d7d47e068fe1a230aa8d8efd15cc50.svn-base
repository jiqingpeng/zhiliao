// 用户状态修改
function changeState(id,state){
    var postData = '';
    var many = false;
    if(isArray(id)){ // 批量修改
        postData = 'state=' + state;
        for(var i=0;i<id.length;i++){
            postData += '&id='+id[i];
        }
        many = true;
    } else {
        postData = {id:id,state:state};
    }
    $.myAjax({
        url : basePath + 'admin/attend/save.do',
        data : postData,
        success : function(result){
            if(result.flag){
                myAlert(result.msg);
                if(many){
                    initPage();
                }
            } else {
                myAlert(result.msg,'slow');
            }
        },
        error : function(result) {
            myAlert("请求失败!",'slow');
        }
    });
}
// 修改页面表格数据
function changeTabData(rows){
    if($("#texttable").bootstrapTable('getData','').length < allData.length){
        if(isArray(rows)){
            for(var i=0;i<rows.length;i++){
                for(var j=0;j<allData.length;j++){
                    if(rows[i].id == allData[j].id){
                        allData[j]  = rows[i];
                        break;
                    }
                }
            }
        } else {
            for(var j=0;j<allData.length;j++){
                if(rows.id == allData[j].id){
                    allData[j]  = rows;
                    break;
                }
            }
        } 
    } else {
        allData = $("#texttable").bootstrapTable('getData','');
    }
}
