		var activityIssueCommentId=$('.activity-issueComment-id').val();
		var content=$('.comment-cont').val();
		console.log(statu)
		if(statu==1){
			console.log(2)
			var data={activityIssueId:activityIssueId,activityIssueCommentId:activityIssueCommentId,content:content,type:3,field:2};
		}else{
			var data={activityIssueId:activityIssueId,content:content,type:3,field:2};
			console.log(3)
		};
		$.myAjax({
			url:url,
			data:data,
			success:function(result){
				console.log(result)
				if(result.flag){
					$('.header').html('');
					$('#thelist').html('');
					init(1,5);
