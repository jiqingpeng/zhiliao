<script src="../../js/jquery.min.js"></script>
<script>
	$(function(){
		//显示方式
		function show(id,id2,upClass,downClass,ifClass){
			$(id).on('click',function(){
				$(id2).toggleClass('active');
				if($(id).is(ifClass)){
					$(id).removeClass(upClass);
					$(id).addClass(downClass);
				} else {
					$(id).addClass(upClass);
					$(id).removeClass(downClass);
				};
			});
		};
		//票务说明
		show('.ticknow','.ticketDetail','whiteArrup','whiteArrdown','.whiteArrup');
		//乘客明细
		show('.personMess','.orderlist','grayArrup','grayArrdown','.grayArrup');
		//添加乘机人
		function addPerson(){
			$('.addBtn').on('click',function(){
				var passInfo='<div class="passInfo"><div class="row clearfix"><div class="name fl"><input type="text" placeholder="姓名与所选证件上的姓名一致"><div class="tipIcon"></div></div><p class="fl prompt">成人票(该价格不支持儿童)<a class="delIocn delPerson" href="javascript:;"></a></p><span class="quesIcon"></span></div><div class="row clearfix"><div class="selectHead fl"><span class="selectArrow"></span><div class="fl selectTxt">身份证</div></div><div class="fl codeId"><input type="text" placeholder="证件号码"><div class="tipIcon"></div></div></div><div class="row clearfix"><input class="fl passPhone" type="text" placeholder="(选填)乘机人手机号码,用于接受航变信息,请准确填写"></div></div>';
				$('.newBtn').before(passInfo);
			})
		}
		addPerson();
		//删除乘机人
		function delPerson(){
			$(document).on('click','.delPerson',function(){
				$(this).parents('.passInfo').remove();
			});
		};
		delPerson();
		//下拉框
		function selectShow(){
			$('.selectHead').on('click',function(){
				$('.selectBody').toggleClass('active');
			});
		};
		selectShow();
		function selectChoose(){
			$('.selectList').on('click',function(){
				$(this).parent().prev().html($(this).html())
			})
		};
		selectChoose();
		function cardCheck(){
			$('.cardCheck').on('click',function(){
				$(this).parent().next().toggleClass('active');
			});
		};
		cardCheck();

	})
</script>
