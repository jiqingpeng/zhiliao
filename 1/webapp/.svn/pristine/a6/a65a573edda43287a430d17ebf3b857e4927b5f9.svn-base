<script type="text/javascript">
var actId = '';
$(function(){
	$(".nav-title").html("嘉宾介绍");
	actId = Request('actId');
	initPage();
});
function initPage(){
	loading();
	$.myAjax({
		url: basePath + "index/activity.do",
		data: {id: actId, type: '11'},
		success: function(result){
			$(".loading").remove();
			console.log(result);
			var str = '';
			if(result.flag){
				$(".title").html(result.data.activity.name);
				var expert = result.data.expert;
				//判断嘉宾介绍是否为空
				if(expert.length == 0){
					myAlert("暂无嘉宾介绍内容");
					return;
				}
				for(var i = 0; i < expert.length; i++){
					if(expert[i].duty == null || expert[i].duty == '' || expert[i].duty == undefined){
						expert[i].duty = '';
					}
					if(expert[i].unit == null || expert[i].unit == '' || expert[i].unit == undefined){
						expert[i].unit = '';
					}
					str += '<div class="gusetIntro">' +
								'<div class="content">' +
									'<span class="name">' + expert[i].expertName + '</span>' +
									'<span class="post">' + expert[i].duty + '</span>' +
								'</div>' +
								'<div class="company">' + expert[i].unit +'</div>' +
							'</div>'
				}
				$(".container").html(str);

			}else{
				myAlert(result.msg, "slow");
			}
		},
		error: function(){
			$(".loading").remove();
			myConfirm("请求失败!");
		}
	})
}
</script>
</html>